<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WEB_Sentro</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <script src="~/js/theme.js" asp-append-version="true"></script>
</head>
<body class="min-h-screen bg-white text-slate-900 dark:bg-slate-950 dark:text-white">
    <header class="border-b border-slate-100 bg-white dark:border-slate-900 dark:bg-slate-950">
        <div class="mx-auto max-w-7xl px-4 py-4 sm:px-6 lg:px-8">
            <div class="flex items-center justify-between">
                <a asp-area="" asp-controller="Home" asp-action="Index" class="flex items-center gap-3">
                    <div class="h-10 w-10 rounded-2xl bg-gradient-to-br from-sky-600 to-emerald-600"></div>
                    <div class="text-sm font-extrabold tracking-tight">
                        WEB_Sentro
                        <div class="text-[11px] font-semibold text-slate-500 dark:text-slate-400 -mt-0.5">ERP Risk Management</div>
                    </div>
                </a>

                <nav class="flex items-center gap-4">
                    <a asp-area="" asp-controller="Home" asp-action="Index" class="text-sm font-semibold text-slate-600 hover:text-slate-900 dark:text-slate-300">Home</a>
                    <a asp-area="" asp-controller="Home" asp-action="Privacy" class="text-sm font-semibold text-slate-600 hover:text-slate-900 dark:text-slate-300">Privacy</a>
                    <div class="flex items-center gap-3">
                        <a asp-area="Identity" asp-page="/Account/Login"
                           class="text-sm font-bold text-slate-700 hover:text-slate-900">Log In</a>

                        <a asp-area="Identity" asp-page="/Account/Register"
                           class="inline-flex items-center justify-center rounded-xl bg-slate-900 px-4 py-2.5 text-sm font-extrabold text-white">
                            Start free
                        </a>
                    </div>
                </nav>
            </div>
        </div>
    </header>

    <main class="mx-auto max-w-7xl p-6">
        @RenderBody()
    </main>

    <footer class="border-t border-slate-100 bg-white py-8 text-center text-sm text-slate-600 dark:border-slate-900 dark:bg-slate-950">
        <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
            &copy; @DateTime.Now.Year - WEB_Sentro
        </div>
    </footer>

    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
