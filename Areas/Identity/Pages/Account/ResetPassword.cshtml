@page
@model ResetPasswordModel
@{
    ViewData["Title"] = "Reset password";
}

<div class="mx-auto max-w-md p-6">
    <h1 class="text-2xl font-extrabold">@ViewData["Title"]</h1>
    <p class="mt-2 text-sm text-slate-600 dark:text-slate-300">Reset your password.</p>
    <hr class="my-4" />

    <form method="post" class="space-y-4">
        <div asp-validation-summary="ModelOnly" class="text-rose-700 text-sm" role="alert"></div>
        <input asp-for="Input.Code" type="hidden" />

        <div>
            <label asp-for="Input.Email" class="block text-sm font-medium text-slate-700 dark:text-slate-300">Email</label>
            <input asp-for="Input.Email" class="mt-1 block w-full rounded-md border border-slate-200 bg-white px-3 py-2 text-sm text-slate-700 placeholder:text-slate-400 shadow-sm dark:border-slate-800 dark:bg-slate-900/30 dark:text-slate-200" autocomplete="username" aria-required="true" placeholder="name@example.com" />
            <span asp-validation-for="Input.Email" class="text-rose-600 text-sm"></span>
        </div>

        <div>
            <label asp-for="Input.Password" class="block text-sm font-medium text-slate-700 dark:text-slate-300">New password</label>
            <input asp-for="Input.Password" class="mt-1 block w-full rounded-md border border-slate-200 bg-white px-3 py-2 text-sm text-slate-700 placeholder:text-slate-400 shadow-sm dark:border-slate-800 dark:bg-slate-900/30 dark:text-slate-200" autocomplete="new-password" aria-required="true" placeholder="Please enter your password." />
            <span asp-validation-for="Input.Password" class="text-rose-600 text-sm"></span>
        </div>

        <div>
            <label asp-for="Input.ConfirmPassword" class="block text-sm font-medium text-slate-700 dark:text-slate-300">Confirm password</label>
            <input asp-for="Input.ConfirmPassword" class="mt-1 block w-full rounded-md border border-slate-200 bg-white px-3 py-2 text-sm text-slate-700 placeholder:text-slate-400 shadow-sm dark:border-slate-800 dark:bg-slate-900/30 dark:text-slate-200" autocomplete="new-password" aria-required="true" placeholder="Please confirm your password." />
            <span asp-validation-for="Input.ConfirmPassword" class="text-rose-600 text-sm"></span>
        </div>

        <button type="submit" class="w-full inline-flex justify-center rounded-xl bg-emerald-600 px-4 py-2 text-sm font-extrabold text-white hover:brightness-105 focus:outline-none focus:ring-2 focus:ring-emerald-500 focus:ring-offset-2 dark:focus:ring-offset-slate-950">
            Reset
        </button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
