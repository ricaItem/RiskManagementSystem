@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
    Layout = "/Views/Shared/_LayoutLanding.cshtml";
}

<section class="relative min-h-screen overflow-hidden bg-white dark:bg-slate-950">
    <div aria-hidden="true" class="pointer-events-none absolute inset-0">
        <div class="absolute -top-32 left-1/2 h-[520px] w-[820px] -translate-x-1/2 rounded-full bg-gradient-to-r from-sky-200/55 via-emerald-200/35 to-indigo-200/45 blur-3xl dark:from-sky-500/15 dark:via-emerald-500/10 dark:to-indigo-500/15"></div>
        <div class="absolute -bottom-40 right-[-140px] h-[480px] w-[480px] rounded-full bg-gradient-to-tr from-emerald-200/40 to-sky-200/40 blur-3xl dark:from-emerald-500/10 dark:to-sky-500/10"></div>
    </div>

    <div class="relative flex min-h-screen items-center justify-center px-4 py-12">
        <div class="mx-auto w-full max-w-md">
            <div class="flex justify-center">
                <a asp-controller="Home" asp-action="Index" class="flex flex-col items-center">
                    <div class="flex items-center gap-3">
                        <img src="~/images/logo1.png"
                             alt="Sentro Logo"
                             class="h-10 w-auto object-contain dark:brightness-0 dark:invert" />
                        <span class="text-2xl font-extrabold tracking-tight text-slate-900 dark:text-white">Sentro</span>
                    </div>
                    <div class="text-xs font-semibold text-slate-500 dark:text-slate-400 mt-2">ERP Risk Management</div>
                </a>
            </div>

            <h1 class="mt-8 text-center text-2xl font-extrabold tracking-tight text-slate-900 dark:text-white">
                Create your account
            </h1>
            <p class="mt-2 text-center text-sm text-slate-600 dark:text-slate-300">
                Start your workspace in minutes.
            </p>

            <div class="mt-8 rounded-2xl border border-slate-200 bg-white p-7 shadow-lg ring-1 ring-slate-900/5
                        dark:border-slate-800 dark:bg-slate-900 dark:ring-white/10">

                <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="space-y-5">
                    <div asp-validation-summary="ModelOnly"
                         class="hidden rounded-xl border border-rose-200 bg-rose-50 px-4 py-3 text-sm text-rose-700
                                dark:border-rose-900/40 dark:bg-rose-900/20 dark:text-rose-200"></div>

                    <div>
                        <label asp-for="Input.Email" class="block text-sm font-semibold text-slate-700 dark:text-slate-200"></label>
                        <input asp-for="Input.Email" autocomplete="username" aria-required="true"
                               class="mt-1 w-full rounded-xl border border-slate-200 bg-white px-4 py-3 text-sm
                                      focus:border-sky-500 focus:ring-2 focus:ring-sky-500/20
                                      dark:border-slate-700 dark:bg-slate-950/40 dark:text-white"
                               placeholder="name@example.com" />
                        <span asp-validation-for="Input.Email" class="mt-1 block text-xs text-rose-600"></span>
                    </div>

                    <div>
                        <label asp-for="Input.Password" class="block text-sm font-semibold text-slate-700 dark:text-slate-200"></label>
                        <input asp-for="Input.Password" autocomplete="new-password" aria-required="true" type="password"
                               class="mt-1 w-full rounded-xl border border-slate-200 bg-white px-4 py-3 text-sm
                                      focus:border-sky-500 focus:ring-2 focus:ring-sky-500/20
                                      dark:border-slate-700 dark:bg-slate-950/40 dark:text-white"
                               placeholder="Create a password" />
                        <span asp-validation-for="Input.Password" class="mt-1 block text-xs text-rose-600"></span>

                        <p class="mt-2 text-xs text-slate-500 dark:text-slate-400">
                            Use at least 6 characters (recommended: mix letters & numbers).
                        </p>
                    </div>

                    <div>
                        <label asp-for="Input.ConfirmPassword" class="block text-sm font-semibold text-slate-700 dark:text-slate-200"></label>
                        <input asp-for="Input.ConfirmPassword" autocomplete="new-password" aria-required="true" type="password"
                               class="mt-1 w-full rounded-xl border border-slate-200 bg-white px-4 py-3 text-sm
                                      focus:border-sky-500 focus:ring-2 focus:ring-sky-500/20
                                      dark:border-slate-700 dark:bg-slate-950/40 dark:text-white"
                               placeholder="Confirm password" />
                        <span asp-validation-for="Input.ConfirmPassword" class="mt-1 block text-xs text-rose-600"></span>
                    </div>

                    <button id="registerSubmit" type="submit"
                            class="w-full rounded-xl bg-gradient-to-r from-sky-600 to-emerald-600 py-3 text-sm font-extrabold text-white shadow-lg shadow-emerald-600/15 transition hover:brightness-110
                                   focus:outline-none focus:ring-2 focus:ring-emerald-500 focus:ring-offset-2 dark:focus:ring-offset-slate-950">
                        Create account
                    </button>

                    <p class="text-center text-sm text-slate-600 dark:text-slate-300">
                        Already have an account?
                        <a asp-page="./Login" class="font-extrabold text-slate-900 hover:underline dark:text-white">
                            Log in
                        </a>
                    </p>
                </form>

                @if ((Model.ExternalLogins?.Count ?? 0) > 0)
                {
                    <div class="mt-6">
                        <div class="relative">
                            <div class="absolute inset-0 flex items-center">
                                <div class="w-full border-t border-slate-200 dark:border-slate-800"></div>
                            </div>
                            <div class="relative flex justify-center">
                                <span class="bg-white px-3 text-xs font-bold text-slate-500 dark:bg-slate-900 dark:text-slate-400">
                                    OR CONTINUE WITH
                                </span>
                            </div>
                        </div>

                        <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post"
                              class="mt-5 grid gap-3">
                            @foreach (var provider in Model.ExternalLogins!)
                            {
                                <button type="submit"
                                        name="provider"
                                        value="@provider.Name"
                                        title="Register using your @provider.DisplayName account"
                                        class="inline-flex items-center justify-center rounded-xl border border-slate-200 bg-white px-4 py-3 text-sm font-extrabold text-slate-900 shadow-sm
                                                       hover:bg-slate-50 focus:outline-none focus:ring-2 focus:ring-sky-500 focus:ring-offset-2
                                                       dark:border-slate-800 dark:bg-slate-950/40 dark:text-white dark:hover:bg-slate-800 dark:focus:ring-offset-slate-950">
                                    Continue with @provider.DisplayName
                                </button>
                            }
                        </form>
                    </div>
                }
            </div>

            <p class="mt-6 text-center text-xs text-slate-500 dark:text-slate-400">
                By creating an account, you agree to your Terms and Privacy Policy.
            </p>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}