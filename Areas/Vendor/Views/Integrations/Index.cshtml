@{
    ViewData["Title"] = "Integrations & API";
    Layout = "~/Areas/Vendor/Views/Shared/_LayoutVendor.cshtml";
}

<div class="space-y-6 animate-in fade-in duration-500">
    <div class="flex flex-col gap-2 md:flex-row md:items-center md:justify-between">
        <div>
            <h1 class="text-2xl font-black tracking-tight text-slate-900 dark:text-white">Developer <span class="text-emerald-600">Gateway</span></h1>
            <p class="text-[10px] font-black uppercase tracking-widest text-slate-400">Manage API Keys & Outbound Webhooks</p>
        </div>
        <button onclick="toggleModal('apiKeyModal')" class="rounded-xl bg-slate-900 px-5 py-3 text-xs font-black text-white dark:bg-emerald-600 shadow-lg shadow-emerald-500/20 hover:scale-105 transition-all">
            Generate New API Key
        </button>
    </div>

    <div class="grid gap-6 lg:grid-cols-12">
        <div class="lg:col-span-8 space-y-6">
            <div class="rounded-3xl border border-slate-200 bg-white overflow-hidden dark:border-slate-800 dark:bg-slate-900/50 shadow-sm">
                <div class="p-6 border-b border-slate-100 dark:border-slate-800 bg-slate-50/50 dark:bg-slate-800/30">
                    <h3 class="text-sm font-black uppercase tracking-widest text-slate-900 dark:text-white">Active API Credentials</h3>
                </div>
                <div class="overflow-x-auto">
                    <table class="w-full text-left">
                        <thead class="text-[10px] font-black uppercase tracking-widest text-slate-400 border-b border-slate-100 dark:border-slate-800">
                            <tr>
                                <th class="px-6 py-4">Key Name</th>
                                <th class="px-6 py-4">Created For</th>
                                <th class="px-6 py-4">Secret Prefix</th>
                                <th class="px-6 py-4">Status</th>
                                <th class="px-6 py-4 text-right">Actions</th>
                            </tr>
                        </thead>
                        <tbody class="divide-y divide-slate-100 dark:divide-slate-800 text-sm">
                            <tr class="group hover:bg-slate-50/50 dark:hover:bg-slate-800/20">
                                <td class="px-6 py-4 font-bold text-slate-900 dark:text-white">BuildCraft Procore Sync</td>
                                <td class="px-6 py-4 text-xs font-medium text-slate-500">BuildCraft Solutions</td>
                                <td class="px-6 py-4 font-mono text-[11px] text-slate-400">sk_live_51P...</td>
                                <td class="px-6 py-4"><span class="h-2 w-2 rounded-full bg-emerald-500 inline-block mr-2"></span><span class="text-xs font-bold text-emerald-600">Active</span></td>
                                <td class="px-6 py-4 text-right"><button class="text-rose-500 font-bold text-xs opacity-0 group-hover:opacity-100 transition-opacity">Revoke</button></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>

            <div class="rounded-3xl border border-slate-200 bg-white p-8 dark:border-slate-800 dark:bg-slate-900/50 shadow-sm">
                <div class="flex justify-between items-center mb-6">
                    <h3 class="text-sm font-black uppercase tracking-widest text-slate-900 dark:text-white">Global Webhooks</h3>
                    <span class="text-[10px] font-black uppercase px-2 py-1 bg-sky-100 text-sky-700 rounded dark:bg-sky-900/30 dark:text-sky-400">Outbound Only</span>
                </div>
                <div class="space-y-4">
                    <div class="flex items-center justify-between p-4 rounded-2xl bg-slate-50 dark:bg-slate-950 border border-slate-100 dark:border-slate-800">
                        <div class="flex items-center gap-4">
                            <div class="p-3 bg-white dark:bg-slate-800 rounded-xl shadow-sm"><span class="text-xl">🔔</span></div>
                            <div>
                                <p class="text-xs font-black text-slate-900 dark:text-white uppercase tracking-tighter">Organization Provisioned</p>
                                <p class="text-[10px] text-slate-400 font-medium">Endpoint: https://hooks.slack.com/...</p>
                            </div>
                        </div>
                        <span class="text-[10px] font-black text-emerald-500 uppercase">200 OK</span>
                    </div>
                </div>
            </div>
        </div>

        <div class="lg:col-span-4 space-y-4">
            <h3 class="text-xs font-black uppercase tracking-widest text-slate-400 ml-2">Native Connections</h3>
            @{
                var services = new[] {
                        new { Name = "Stripe Billing", Status = "Connected", Icon = "💳", Color = "emerald" },
                        new { Name = "Azure AD / SSO", Status = "Configured", Icon = "🔑", Color = "sky" },
                        new { Name = "SendGrid SMTP", Status = "Operational", Icon = "📧", Color = "emerald" }
                        };
            }
            @foreach (var s in services)
            {
                <div class="rounded-2xl border border-slate-200 bg-white p-4 dark:border-slate-800 dark:bg-slate-900/50 flex items-center justify-between">
                    <div class="flex items-center gap-3">
                        <div class="h-10 w-10 rounded-xl bg-slate-100 dark:bg-slate-800 flex items-center justify-center text-xl">@s.Icon</div>
                        <div>
                            <p class="text-xs font-black text-slate-900 dark:text-white">@s.Name</p>
                            <p class="text-[10px] font-bold text-@s.Color-500 uppercase">@s.Status</p>
                        </div>
                    </div>
                    <button class="text-slate-400 hover:text-slate-600"><svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path d="M9 5l7 7-7 7" stroke-width="3" /></svg></button>
                </div>
            }
        </div>
    </div>
</div>

<div id="apiKeyModal" class="fixed inset-0 z-50 hidden">
    <div class="absolute inset-0 bg-slate-900/40 backdrop-blur-sm" onclick="toggleModal('apiKeyModal')"></div>
    <div class="absolute inset-0 flex items-center justify-center p-4">
        <div class="w-full max-w-md rounded-[2.5rem] bg-white p-10 shadow-2xl dark:bg-slate-900 border border-slate-200 dark:border-slate-800">
            <h2 class="text-xl font-black text-slate-900 dark:text-white mb-6">New <span class="text-emerald-600">API Key</span></h2>
            <form class="space-y-4">
                <input type="text" placeholder="Key Label (e.g. Reporting Bot)" class="w-full rounded-xl border-slate-200 bg-slate-50 p-3 text-sm font-bold dark:border-slate-800 dark:bg-slate-950 dark:text-white" />
                <select class="w-full rounded-xl border-slate-200 bg-slate-50 p-3 text-sm font-bold dark:border-slate-800 dark:bg-slate-950 dark:text-white">
                    <option>Scope: Read Only</option>
                    <option>Scope: Full Admin</option>
                </select>
                <div class="rounded-xl bg-amber-50 p-4 border border-amber-100 dark:bg-amber-900/10 dark:border-amber-900/20">
                    <p class="text-[10px] font-bold text-amber-700 dark:text-amber-500 uppercase leading-relaxed">Warning: This key grants access to sensitive construction firm data. Never share it in public repositories.</p>
                </div>
                <div class="flex gap-3 pt-4">
                    <button type="button" onclick="toggleModal('apiKeyModal')" class="flex-1 py-3 text-xs font-black text-slate-400 uppercase">Cancel</button>
                    <button type="submit" class="flex-[2] rounded-xl bg-slate-900 py-3 text-xs font-black text-white dark:bg-emerald-600 shadow-lg shadow-emerald-600/20">Generate Key</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function toggleModal(id) {
            const modal = document.getElementById(id);
            modal.classList.toggle('hidden');
        }
    </script>
}