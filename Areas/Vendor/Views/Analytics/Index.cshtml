@{
    ViewData["Title"] = "System Usage & Analytics";
    Layout = "~/Areas/Vendor/Views/Shared/_LayoutVendor.cshtml";
}

<div class="space-y-6 animate-in fade-in duration-500">
    <div class="flex flex-col gap-2 md:flex-row md:items-center md:justify-between">
        <div>
            <h1 class="text-2xl font-black tracking-tight text-slate-900 dark:text-white">Platform <span class="text-emerald-600">Analytics</span></h1>
            <p class="text-[10px] font-black uppercase tracking-widest text-slate-400">Resource Consumption & Engagement Metrics</p>
        </div>
        <select class="rounded-xl border border-slate-200 bg-white px-4 py-2 text-xs font-bold dark:border-slate-800 dark:bg-slate-900 dark:text-white">
            <option>Last 30 Days</option>
            <option>Last 90 Days</option>
            <option>This Year</option>
        </select>
    </div>

    <div class="grid gap-6 md:grid-cols-3">
        <div class="rounded-3xl border border-slate-200 bg-white p-6 dark:border-slate-800 dark:bg-slate-900/50">
            <p class="text-[10px] font-black uppercase tracking-widest text-slate-400 mb-4">API Requests (Monthly)</p>
            <div class="flex items-end gap-2">
                <span class="text-3xl font-black text-slate-900 dark:text-white">1.2M</span>
                <span class="text-xs font-bold text-emerald-500 mb-1">↑ 12%</span>
            </div>
            <div class="mt-4 h-2 w-full rounded-full bg-slate-100 dark:bg-slate-800 overflow-hidden">
                <div class="h-full bg-emerald-500" style="width: 65%"></div>
            </div>
        </div>

        <div class="rounded-3xl border border-slate-200 bg-white p-6 dark:border-slate-800 dark:bg-slate-900/50">
            <p class="text-[10px] font-black uppercase tracking-widest text-slate-400 mb-4">Total Cloud Storage</p>
            <div class="flex items-end gap-2">
                <span class="text-3xl font-black text-slate-900 dark:text-white">842 GB</span>
                <span class="text-xs font-bold text-slate-400 mb-1">of 2TB</span>
            </div>
            <div class="mt-4 h-2 w-full rounded-full bg-slate-100 dark:bg-slate-800 overflow-hidden">
                <div class="h-full bg-sky-500" style="width: 42%"></div>
            </div>
        </div>

        <div class="rounded-3xl border border-slate-200 bg-white p-6 dark:border-slate-800 dark:bg-slate-900/50">
            <p class="text-[10px] font-black uppercase tracking-widest text-slate-400 mb-4">Active Modules</p>
            <div class="flex items-end gap-2">
                <span class="text-3xl font-black text-slate-900 dark:text-white">8/12</span>
                <span class="text-xs font-bold text-amber-500 mb-1">4 Unused</span>
            </div>
            <div class="mt-4 flex gap-1">
                @for (int i = 0; i < 12; i++)
                {
                    <div class="h-2 flex-1 rounded-full @(i < 8 ? "bg-emerald-500" : "bg-slate-200 dark:bg-slate-800")"></div>
                }
            </div>
        </div>
    </div>

    <div class="grid gap-6 lg:grid-cols-2">
        <div class="rounded-3xl border border-slate-200 bg-white p-8 dark:border-slate-800 dark:bg-slate-900/50">
            <h3 class="text-sm font-black uppercase tracking-widest text-slate-900 dark:text-white mb-6">Module Engagement</h3>
            <div class="space-y-5">
                @{
                    var modules = new[] {
                                new { Name = "Risk Assessment", Load = 92 },
                                new { Name = "Incident Reporting", Load = 78 },
                                new { Name = "Procurement Risk", Load = 45 },
                                new { Name = "Audit Logs", Load = 30 }
                                };
                }
                @foreach (var m in modules)
                {
                    <div class="group">
                        <div class="flex justify-between text-xs font-bold mb-2">
                            <span class="text-slate-600 dark:text-slate-400">@m.Name</span>
                            <span class="text-slate-900 dark:text-white">@m.Load%</span>
                        </div>
                        <div class="h-1.5 w-full bg-slate-100 dark:bg-slate-800 rounded-full">
                            <div class="h-full bg-emerald-500 rounded-full transition-all group-hover:bg-emerald-400" style="width: @m.Load%"></div>
                        </div>
                    </div>
                }
            </div>
        </div>

        <div class="rounded-3xl border border-slate-200 bg-white overflow-hidden dark:border-slate-800 dark:bg-slate-900/50">
            <div class="p-6 border-b border-slate-100 dark:border-slate-800">
                <h3 class="text-sm font-black uppercase tracking-widest text-slate-900 dark:text-white">Top Users by Activity</h3>
            </div>
            <table class="w-full text-left">
                <thead class="bg-slate-50/50 text-[10px] font-black uppercase tracking-widest text-slate-400 dark:bg-slate-800/30">
                    <tr>
                        <th class="px-6 py-3">Firm Name</th>
                        <th class="px-6 py-3">Actions</th>
                        <th class="px-6 py-3">Trend</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-slate-100 text-xs font-bold dark:divide-slate-800">
                    <tr class="dark:text-slate-300">
                        <td class="px-6 py-4">BuildCraft Solutions</td>
                        <td class="px-6 py-4">42,901</td>
                        <td class="px-6 py-4 text-emerald-500">↑ 8%</td>
                    </tr>
                    <tr class="dark:text-slate-300">
                        <td class="px-6 py-4">Skyline Heights</td>
                        <td class="px-6 py-4">12,400</td>
                        <td class="px-6 py-4 text-rose-500">↓ 3%</td>
                    </tr>
                    <tr class="dark:text-slate-300">
                        <td class="px-6 py-4">Terraform Infra</td>
                        <td class="px-6 py-4">2,105</td>
                        <td class="px-6 py-4 text-slate-400">Stable</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>