@{
    ViewData["Title"] = "My Account";
    Layout = "~/Areas/Vendor/Views/Shared/_LayoutVendor.cshtml";
}
}

<div class="max-w-4xl mx-auto space-y-8 animate-in fade-in duration-500">
    <div class="flex items-center gap-6">
        <div class="relative group">
            <div class="h-24 w-24 rounded-[2rem] bg-gradient-to-tr from-emerald-500 to-sky-500 p-1">
                <div class="h-full w-full rounded-[1.8rem] bg-white dark:bg-slate-900 flex items-center justify-center text-3xl font-black text-slate-300">
                    AV
                </div>
            </div>
            <button class="absolute -bottom-2 -right-2 bg-white dark:bg-slate-800 p-2 rounded-xl shadow-lg border border-slate-200 dark:border-slate-700 hover:scale-110 transition-transform">
                📸
            </button>
        </div>
        <div>
            <h1 class="text-2xl font-black text-slate-900 dark:text-white">Admin Vendor</h1>
            <p class="text-sm font-bold text-emerald-600 uppercase tracking-widest">System Architect Access</p>
        </div>
    </div>

    <div class="grid gap-8 md:grid-cols-12">
        <div class="md:col-span-8 space-y-6">
            <div class="rounded-3xl border border-slate-200 bg-white p-8 dark:border-slate-800 dark:bg-slate-900/50 shadow-sm">
                <h3 class="text-sm font-black uppercase tracking-widest text-slate-900 dark:text-white mb-6">Personal Details</h3>
                <form class="grid gap-4 md:grid-cols-2">
                    <div class="space-y-1">
                        <label class="text-[10px] font-black uppercase text-slate-400 ml-1">Full Name</label>
                        <input type="text" value="Admin Vendor" class="w-full rounded-xl border-slate-200 bg-slate-50 p-3 text-sm font-bold dark:border-slate-800 dark:bg-slate-950 dark:text-white" />
                    </div>
                    <div class="space-y-1">
                        <label class="text-[10px] font-black uppercase text-slate-400 ml-1">Email Address</label>
                        <input type="email" value="admin@sentro.io" class="w-full rounded-xl border-slate-200 bg-slate-50 p-3 text-sm font-bold dark:border-slate-800 dark:bg-slate-950 dark:text-white" />
                    </div>
                    <div class="md:col-span-2 pt-4">
                        <button type="submit" class="rounded-xl bg-slate-900 px-6 py-3 text-xs font-black text-white dark:bg-emerald-600 transition-all hover:shadow-lg hover:shadow-emerald-500/20">
                            Update Profile
                        </button>
                    </div>
                </form>
            </div>

            <div class="rounded-3xl border border-slate-200 bg-white p-8 dark:border-slate-800 dark:bg-slate-900/50 shadow-sm">
                <h3 class="text-sm font-black uppercase tracking-widest text-slate-900 dark:text-white mb-6">Security</h3>
                <form class="space-y-4">
                    <div class="space-y-1">
                        <label class="text-[10px] font-black uppercase text-slate-400 ml-1">New Password</label>
                        <input type="password" placeholder="••••••••" class="w-full rounded-xl border-slate-200 bg-slate-50 p-3 text-sm font-bold dark:border-slate-800 dark:bg-slate-950 dark:text-white" />
                    </div>
                    <button type="submit" class="rounded-xl border border-slate-200 px-6 py-3 text-xs font-black text-slate-600 dark:border-slate-700 dark:text-slate-300 hover:bg-slate-50 dark:hover:bg-slate-800">
                        Change Password
                    </button>
                </form>
            </div>
        </div>

        <div class="md:col-span-4 space-y-6">
            <div class="rounded-3xl bg-emerald-600 p-6 text-white shadow-xl shadow-emerald-500/20">
                <h4 class="text-xs font-black uppercase tracking-widest opacity-80 mb-4">Account Level</h4>
                <div class="text-xl font-black mb-2">Master Vendor</div>
                <p class="text-[10px] font-bold opacity-90 leading-relaxed">
                    You have global read/write access to all tenants, billing models, and system-wide security settings.
                </p>
                <div class="mt-6 pt-6 border-t border-white/20">
                    <div class="text-[10px] font-black uppercase mb-1">Last Login</div>
                    <div class="text-xs font-bold">Feb 08, 2026 • 08:52 AM</div>
                </div>
            </div>

            <form action="/Logout" method="post">
                <button type="submit" class="w-full rounded-2xl border-2 border-rose-100 p-4 text-xs font-black uppercase tracking-widest text-rose-500 transition-all hover:bg-rose-500 hover:text-white dark:border-rose-900/30">
                    Terminate Session
                </button>
            </form>
        </div>
    </div>
</div>