@using Microsoft.AspNetCore.Http
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Sentro Vendor</title>

    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            darkMode: 'class',
            theme: {
                extend: {
                    width: {
                        'sidebar-expanded': '260px',
                        'sidebar-collapsed': '80px'
                    }
                }
            }
        }
    </script>
    <style>
        /* Smooth transitions for sidebar */
        .sidebar-transition {
            transition: width 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        }

        .content-transition {
            transition: margin-left 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        }
        /* Custom Scrollbar */
        .custom-scrollbar::-webkit-scrollbar {
            width: 4px;
        }

        .custom-scrollbar::-webkit-scrollbar-track {
            background: transparent;
        }

        .custom-scrollbar::-webkit-scrollbar-thumb {
            background: #e2e8f0;
            border-radius: 10px;
        }

        .dark .custom-scrollbar::-webkit-scrollbar-thumb {
            background: #334155;
        }

        /* Collapsed State classes */
        .sidebar-collapsed .sidebar-label,
        .sidebar-collapsed .sidebar-header-text {
            display: none;
        }

        .sidebar-collapsed .sidebar-nav-item {
            justify-content: center;
            padding-left: 0;
            padding-right: 0;
        }

        .logo-img {
            max-width: 180px;
        }

        .sidebar-collapsed .logo-img {
            height: 32px;
            max-width: 40px;
            object-position: left;
        }

        .sidebar-collapsed .sidebar-header-text {
            display: flex;
            justify-content: center;
            width: 100%;
        }
    </style>
    <script src="~/js/theme.js"></script>
</head>
<body class="bg-slate-50 text-slate-900 transition-colors duration-300 dark:bg-[#020617] dark:text-white overflow-x-hidden">

    @{
        string IsActive(string path)
        {
            var currentPath = Context.Request.Path.ToString();
            return currentPath.StartsWith(path, StringComparison.OrdinalIgnoreCase)
            ? "bg-emerald-500/10 text-emerald-600 border-emerald-500/20"
            : "text-slate-500 hover:bg-slate-100 dark:hover:bg-slate-800 border-transparent";
        }
    }

    <div id="sidebarOverlay" onclick="toggleSidebar()" class="fixed inset-0 bg-slate-900/50 backdrop-blur-sm z-40 hidden md:hidden"></div>

    <div class="flex min-h-screen relative">
        <aside id="mainSidebar"
               class="sidebar-transition fixed inset-y-0 left-0 z-50 flex flex-col border-r border-slate-200 bg-white/80 backdrop-blur-xl dark:border-slate-800 dark:bg-slate-900/80
                      w-sidebar-expanded -translate-x-full md:translate-x-0 md:sticky md:top-0 md:h-screen">

            <button onclick="toggleSidebar()"
                    class="absolute -right-3 top-10 flex h-6 w-6 items-center justify-center rounded-full border border-slate-200 bg-white text-slate-500 shadow-sm hover:text-emerald-600 dark:border-slate-700 dark:bg-slate-800 transition-transform"
                    id="sidebarToggleBtn" aria-label="Toggle Sidebar">
                <span class="text-[10px]" id="toggleIcon">
                    <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M15 19l-7-7 7-7"></path></svg>
                </span>
            </button>

            <div class="p-6 h-full flex flex-col overflow-hidden">
                <div class="flex items-center justify-center mb-10 shrink-0 px-2 h-16">
                    <div class="flex items-center justify-center transition-all duration-300 w-full">
                        <img src="~/images/logoo.png"
                             alt="Sentro Logo"
                             class="logo-img h-12 w-auto object-contain transition-all duration-300 dark:brightness-0 dark:invert" />
                    </div>
                </div>

                <nav class="space-y-1 pb-4 overflow-y-auto overflow-x-hidden flex-1 custom-scrollbar">
                    <div class="sidebar-label pt-4 pb-2 text-[10px] font-black uppercase tracking-[0.2em] text-slate-400 px-4 whitespace-nowrap">Core</div>

                    <a href="/Vendor/Dashboard" title="Dashboard" class="sidebar-nav-item flex items-center gap-3 rounded-xl px-4 py-2.5 text-sm font-bold border transition-all @IsActive("/Vendor/Dashboard")">
                        <svg class="w-5 h-5 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2V6zM14 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2V6zM4 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2v-2zM14 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2v-2z"></path></svg>
                        <span class="sidebar-label whitespace-nowrap">System Dashboard</span>
                    </a>

                    <a href="/Vendor/Analytics" title="Analytics" class="sidebar-nav-item flex items-center gap-3 rounded-xl px-4 py-2.5 text-sm font-bold border transition-all @IsActive("/Vendor/Analytics")">
                        <svg class="w-5 h-5 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 12l3-3 3 3 4-4M8 21l4-4 4 4M3 4h18M4 4h16v12a1 1 0 01-1 1H5a1 1 0 01-1-1V4z"></path></svg>
                        <span class="sidebar-label whitespace-nowrap">Usage & Analytics</span>
                    </a>

                    <div class="sidebar-label pt-6 pb-2 text-[10px] font-black uppercase tracking-[0.2em] text-slate-400 px-4 whitespace-nowrap">Management</div>

                    <a href="/Vendor/Organizations" title="Organizations" class="sidebar-nav-item flex items-center gap-3 rounded-xl px-4 py-2.5 text-sm font-bold border transition-all @IsActive("/Vendor/Organizations")">
                        <svg class="w-5 h-5 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path></svg>
                        <span class="sidebar-label whitespace-nowrap">Organizations</span>
                    </a>

                    <a href="/Vendor/OrgAdmins" title="Admins" class="sidebar-nav-item flex items-center gap-3 rounded-xl px-4 py-2.5 text-sm font-bold border transition-all @IsActive("/Vendor/OrgAdmins")">
                        <svg class="w-5 h-5 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 7a2 2 0 012 2m4 0a6 6 0 01-7.743 5.743L11 17H9v2H7v2H4a1 1 0 01-1-1v-2.586a1 1 0 01.293-.707l5.964-5.964A6 6 0 1121 9z"></path></svg>
                        <span class="sidebar-label whitespace-nowrap">Admin Accounts</span>
                    </a>

                    <div class="sidebar-label pt-6 pb-2 text-[10px] font-black uppercase tracking-[0.2em] text-slate-400 px-4 whitespace-nowrap">Commercial</div>

                    <a href="/Vendor/Billing" title="Billing" class="sidebar-nav-item flex items-center gap-3 rounded-xl px-4 py-2.5 text-sm font-bold border transition-all @IsActive("/Vendor/Billing")">
                        <svg class="w-5 h-5 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z"></path></svg>
                        <span class="sidebar-label whitespace-nowrap">Billing & Plans</span>
                    </a>

                    <a href="/Vendor/Settings" title="Settings" class="sidebar-nav-item flex items-center gap-3 rounded-xl px-4 py-2.5 text-sm font-bold border transition-all @IsActive("/Vendor/Settings")">
                        <svg class="w-5 h-5 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path></svg>
                        <span class="sidebar-label whitespace-nowrap">Global Settings</span>
                    </a>
                </nav>

                <div class="mt-auto pt-4 border-t border-slate-100 dark:border-slate-800 shrink-0">
                    <button type="button" onclick="window.__toggleTheme()"
                            class="sidebar-nav-item flex w-full items-center gap-3 rounded-xl px-4 py-3 text-xs font-black uppercase tracking-widest text-slate-400 hover:bg-slate-100 dark:hover:bg-slate-800 transition-all">
                        <span class="dark:hidden flex items-center gap-3 shrink-0">
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z"></path></svg>
                            <span class="sidebar-label">Dark</span>
                        </span>
                        <span class="hidden dark:flex items-center gap-3 shrink-0">
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3v1m0 16v1m9-9h-1M4 9h-1m15.364-6.364l-.707.707M6.343 17.657l-.707.707m12.728 0l-.707-.707M6.343 6.343l-.707-.707M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path></svg>
                            <span class="sidebar-label">Light</span>
                        </span>
                    </button>
                </div>
            </div>
        </aside>

        <main class="flex-1 flex flex-col min-w-0 bg-inherit content-transition">
            <header class="flex h-16 items-center justify-between border-b border-slate-200 px-4 md:px-8 bg-white/30 backdrop-blur-md dark:border-slate-800 dark:bg-slate-900/30 sticky top-0 z-30">
                <div class="flex items-center gap-4">
                    <button onclick="toggleSidebar()" class="md:hidden p-2 text-slate-600 dark:text-slate-300">
                        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7"></path></svg>
                    </button>
                    <div class="text-xs font-bold text-slate-500 uppercase tracking-widest truncate">
                        Vendor Portal / <span class="text-slate-900 dark:text-white">@ViewData["Title"]</span>
                    </div>
                </div>

                <div class="relative">
                    <button onclick="toggleUserDropdown()" id="userDropdownBtn" class="flex items-center gap-4 hover:opacity-80 transition-opacity focus:outline-none group">
                        <div class="hidden sm:flex flex-col items-end mr-2">
                            <span class="text-xs font-bold">Admin User</span>
                            <span class="text-[10px] text-emerald-600 font-bold uppercase">Super Vendor</span>
                        </div>
                        <div class="h-10 w-10 rounded-xl bg-gradient-to-tr from-slate-200 to-slate-300 dark:from-slate-700 dark:to-slate-800 border border-slate-300 dark:border-slate-600 flex items-center justify-center font-black text-slate-500">
                            AV
                        </div>
                    </button>

                    <div id="userDropdown" class="absolute right-0 mt-3 w-48 rounded-2xl border border-slate-200 bg-white p-2 shadow-2xl dark:border-slate-800 dark:bg-slate-900 hidden animate-in fade-in zoom-in duration-200">
                        <a href="/Vendor/Account" class="flex items-center gap-3 rounded-xl px-4 py-2.5 text-xs font-bold text-slate-600 hover:bg-slate-50 dark:text-slate-400 dark:hover:bg-slate-800">
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path></svg>
                            My Account
                        </a>
                        <div class="my-1 border-t border-slate-100 dark:border-slate-800"></div>
                        <button type="button" onclick="openLogoutModal()" class="flex w-full items-center gap-3 rounded-xl px-4 py-2.5 text-xs font-black text-rose-500 hover:bg-rose-50 dark:hover:bg-rose-900/20">
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path></svg>
                            Logout
                        </button>
                    </div>
                </div>
            </header>

            <div class="p-4 md:p-8 animate-in fade-in slide-in-from-bottom-2 duration-500">
                @RenderBody()
            </div>
        </main>
    </div>

    <div id="logoutModal" class="fixed inset-0 z-[100] hidden items-center justify-center p-4">
        <div class="absolute inset-0 bg-slate-900/60 backdrop-blur-sm"></div>
        <div class="relative w-full max-w-sm rounded-[2.5rem] border border-slate-200 bg-white p-8 shadow-2xl dark:border-slate-800 dark:bg-slate-900 animate-in zoom-in duration-200">
            <div class="text-center">
                <div class="mx-auto mb-4 flex h-16 w-16 items-center justify-center rounded-2xl bg-rose-100 text-rose-600 dark:bg-rose-500/10">
                    <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path></svg>
                </div>
                <h3 class="text-lg font-black text-slate-900 dark:text-white">Signing Out?</h3>
                <p class="mt-2 text-sm font-medium text-slate-500 dark:text-slate-400">Are you sure you want to end your session?</p>
            </div>
            <div class="mt-8 flex flex-col gap-3">
                <button onclick="confirmLogout()" class="w-full rounded-2xl bg-rose-500 py-4 text-xs font-black uppercase tracking-widest text-white transition-all hover:bg-rose-600">Yes, Sign Me Out</button>
                <button onclick="closeLogoutModal()" class="w-full rounded-2xl border border-slate-200 py-4 text-xs font-black uppercase tracking-widest text-slate-600 transition-all hover:bg-slate-50 dark:border-slate-800 dark:text-slate-400">Cancel</button>
            </div>
        </div>
    </div>

    <form id="vendorLogoutForm" action="/Identity/Account/Logout" method="post" class="hidden">
        @Html.AntiForgeryToken()
        <input type="hidden" name="returnUrl" value="/" />
    </form>

    <script>
        const sidebar = document.getElementById('mainSidebar');
        const overlay = document.getElementById('sidebarOverlay');
        const toggleIcon = document.getElementById('toggleIcon');
        const dropdown = document.getElementById('userDropdown');

        function toggleSidebar() {
            const isMobile = window.innerWidth < 768;

            if (isMobile) {
                sidebar.classList.toggle('-translate-x-full');
                overlay.classList.toggle('hidden');
            } else {
                const isCollapsed = sidebar.classList.contains('w-sidebar-collapsed');

                if (isCollapsed) {
                    sidebar.classList.remove('w-sidebar-collapsed', 'sidebar-collapsed');
                    sidebar.classList.add('w-sidebar-expanded');
                    toggleIcon.innerHTML = `<svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M15 19l-7-7 7-7"></path></svg>`;
                } else {
                    sidebar.classList.remove('w-sidebar-expanded');
                    sidebar.classList.add('w-sidebar-collapsed', 'sidebar-collapsed');
                    toggleIcon.innerHTML = `<svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M9 5l7 7-7 7"></path></svg>`;
                }
            }
        }

        function toggleUserDropdown() {
            dropdown?.classList.toggle('hidden');
        }

        function openLogoutModal() {
            dropdown?.classList.add('hidden');
            const modal = document.getElementById('logoutModal');
            modal.classList.replace('hidden', 'flex');
            document.body.style.overflow = 'hidden';
        }

        function closeLogoutModal() {
            const modal = document.getElementById('logoutModal');
            modal.classList.replace('flex', 'hidden');
            document.body.style.overflow = 'auto';
        }

        function confirmLogout() {
            document.getElementById('vendorLogoutForm').submit();
        }

        window.addEventListener('click', function(e) {
            const btn = document.getElementById('userDropdownBtn');
            if (dropdown && btn && !btn.contains(e.target) && !dropdown.contains(e.target)) {
                dropdown.classList.add('hidden');
            }
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>