@using Microsoft.AspNetCore.Http
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Sentro Vendor</title>

    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            darkMode: 'class'
        }
    </script>
    <script src="~/js/theme.js"></script>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body class="bg-slate-50 text-slate-900 transition-colors duration-300 dark:bg-[#020617] dark:text-white">

    @{
        string IsActive(string path)
        {
            var currentPath = Context.Request.Path.ToString();
            return currentPath.StartsWith(path, StringComparison.OrdinalIgnoreCase)
            ? "bg-emerald-500/10 text-emerald-600 border-emerald-500/20"
            : "text-slate-500 hover:bg-slate-100 dark:hover:bg-slate-800 border-transparent";
        }
    }

    <div class="flex min-h-screen">
        <aside class="w-64 border-r border-slate-200 bg-white/50 backdrop-blur-xl dark:border-slate-800 dark:bg-slate-900/50 hidden md:block sticky top-0 h-screen">
            <div class="p-6 h-full flex flex-col">
                <div class="flex items-center gap-3 mb-10">
                    <div class="h-10 w-10 rounded-2xl bg-gradient-to-br from-sky-600 to-emerald-600"></div>
                    <div class="text-sm font-extrabold tracking-tight">
                        Sentro
                        <div class="text-[10px] font-semibold text-slate-500 dark:text-slate-400 -mt-0.5 uppercase tracking-wider">Vendor</div>
                    </div>
                </div>

                <nav class="space-y-1 px-2 pb-4 overflow-y-auto flex-1 custom-scrollbar">
                    <div class="pt-4 pb-2 text-[10px] font-black uppercase tracking-[0.2em] text-slate-400 px-4">Core Monitoring</div>

                    <a href="/Vendor/Dashboard" class="flex items-center gap-3 rounded-xl px-4 py-2.5 text-sm font-bold border transition-all @IsActive("/Vendor/Dashboard")">
                        <span class="text-lg">📊</span> System Dashboard
                    </a>

                    <a href="/Vendor/Analytics" class="flex items-center gap-3 rounded-xl px-4 py-2.5 text-sm font-bold border transition-all @IsActive("/Vendor/Analytics")">
                        <span class="text-lg">📈</span> Usage & Analytics
                    </a>

                    <div class="pt-6 pb-2 text-[10px] font-black uppercase tracking-[0.2em] text-slate-400 px-4">Tenant Management</div>

                    <a href="/Vendor/Organizations" class="flex items-center gap-3 rounded-xl px-4 py-2.5 text-sm font-bold border transition-all @IsActive("/Vendor/Organizations")">
                        <span class="text-lg">🏢</span> Organizations
                    </a>

                    <a href="/Vendor/OrgAdmins" class="flex items-center gap-3 rounded-xl px-4 py-2.5 text-sm font-bold border transition-all @IsActive("/Vendor/OrgAdmins")">
                        <span class="text-lg">🔑</span> Admin Accounts
                    </a>

                    <div class="pt-6 pb-2 text-[10px] font-black uppercase tracking-[0.2em] text-slate-400 px-4">Infrastructure</div>

                    <a href="/Vendor/Logs" class="flex items-center gap-3 rounded-xl px-4 py-2.5 text-sm font-bold border transition-all @IsActive("/Vendor/Logs")">
                        <span class="text-lg">📜</span> Audit Trails
                    </a>

                    <a href="/Vendor/Health" class="flex items-center gap-3 rounded-xl px-4 py-2.5 text-sm font-bold border transition-all @IsActive("/Vendor/Health")">
                        <span class="text-lg">⚡</span> Platform Health
                    </a>

                    <div class="pt-6 pb-2 text-[10px] font-black uppercase tracking-[0.2em] text-slate-400 px-4">Commercial</div>

                    <a href="/Vendor/Billing" class="flex items-center gap-3 rounded-xl px-4 py-2.5 text-sm font-bold border transition-all @IsActive("/Vendor/Billing")">
                        <span class="text-lg">💳</span> Billing & Plans
                    </a>

                    <a href="/Vendor/Settings" class="flex items-center gap-3 rounded-xl px-4 py-2.5 text-sm font-bold border transition-all @IsActive("/Vendor/Settings")">
                        <span class="text-lg">⚙️</span> Global Settings
                    </a>

                    <a href="/Vendor/Integrations" class="flex items-center gap-3 rounded-xl px-4 py-2.5 text-sm font-bold border transition-all @IsActive("/Vendor/Integrations")">
                        <span class="text-lg">🔌</span> API & Webhooks
                    </a>
                </nav>

               


                <div class="mt-auto pt-4 border-t border-slate-100 dark:border-slate-800">
                    <button type="button" onclick="window.__toggleTheme()"
                            class="flex w-full items-center gap-3 rounded-xl px-4 py-3 text-xs font-black uppercase tracking-widest text-slate-400 hover:bg-slate-100 dark:hover:bg-slate-800 transition-all">
                        <span class="dark:hidden">🌙 Dark Mode</span>
                        <span class="hidden dark:inline">☀️ Light Mode</span>
                    </button>
                </div>
            </div>
        </aside>

        <main class="flex-1 overflow-x-hidden">
            <header class="flex h-16 items-center justify-between border-b border-slate-200 px-8 bg-white/30 backdrop-blur-md dark:border-slate-800 dark:bg-slate-900/30 sticky top-0 z-30">
                <div class="text-xs font-bold text-slate-500 uppercase tracking-widest">
                    Vendor Portal / <span class="text-slate-900 dark:text-white">@ViewData["Title"]</span>
                </div>

                <div class="relative">
                    <button onclick="toggleUserDropdown()" id="userDropdownBtn" class="flex items-center gap-4 hover:opacity-80 transition-opacity focus:outline-none group">
                        <div class="flex flex-col items-end mr-2">
                            <span class="text-xs font-bold">Admin User</span>
                            <span class="text-[10px] text-emerald-600 font-bold uppercase">Super Vendor</span>
                        </div>
                        <div class="h-10 w-10 rounded-xl bg-gradient-to-tr from-slate-200 to-slate-300 dark:from-slate-700 dark:to-slate-800 border border-slate-300 dark:border-slate-600 flex items-center justify-center font-black text-slate-500">
                            AV
                        </div>
                    </button>

                    <div id="userDropdown" class="absolute right-0 mt-3 w-48 rounded-2xl border border-slate-200 bg-white p-2 shadow-2xl dark:border-slate-800 dark:bg-slate-900 hidden animate-in fade-in zoom-in duration-200">
                        <a href="/Vendor/Account" class="flex items-center gap-3 rounded-xl px-4 py-2.5 text-xs font-bold text-slate-600 hover:bg-slate-50 dark:text-slate-400 dark:hover:bg-slate-800">
                            👤 My Account
                        </a>

                        <div class="my-1 border-t border-slate-100 dark:border-slate-800"></div>

                        <button type="button"
                                onclick="openLogoutModal()"
                                class="flex w-full items-center gap-3 rounded-xl px-4 py-2.5 text-xs font-black text-rose-500 hover:bg-rose-50 dark:hover:bg-rose-900/20">
                            🚪 Logout
                        </button>


                        <form id="vendorLogoutForm"
                              action="/Identity/Account/Logout"
                              method="post"
                              class="hidden">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="returnUrl" value="/" />
                        </form>
                    </div>

                </div>
            </header>


            <div class="p-8 animate-in fade-in slide-in-from-bottom-2 duration-500">
                @RenderBody()
            </div>
        </main>
    </div>

    <div id="logoutModal" class="fixed inset-0 z-[100] hidden items-center justify-center p-4">
    <div class="absolute inset-0 bg-slate-900/60 backdrop-blur-sm"></div>
    
    <div class="relative w-full max-w-sm rounded-[2.5rem] border border-slate-200 bg-white p-8 shadow-2xl dark:border-slate-800 dark:bg-slate-900 animate-in zoom-in duration-200">
        <div class="text-center">
            <div class="mx-auto mb-4 flex h-16 w-16 items-center justify-center rounded-2xl bg-rose-100 text-2xl dark:bg-rose-500/10">
                👋
            </div>
            <h3 class="text-lg font-black text-slate-900 dark:text-white">Signing Out?</h3>
            <p class="mt-2 text-sm font-medium text-slate-500 dark:text-slate-400">
                Are you sure you want to end your session? You will need to log back in to access the vendor portal.
            </p>
        </div>
        
        <div class="mt-8 flex flex-col gap-3">
            <button onclick="confirmLogout()" 
                    class="w-full rounded-2xl bg-rose-500 py-4 text-xs font-black uppercase tracking-widest text-white transition-all hover:bg-rose-600 hover:shadow-lg hover:shadow-rose-500/30">
                Yes, Sign Me Out
            </button>
            <button onclick="closeLogoutModal()" 
                    class="w-full rounded-2xl border border-slate-200 py-4 text-xs font-black uppercase tracking-widest text-slate-600 transition-all hover:bg-slate-50 dark:border-slate-800 dark:text-slate-400 dark:hover:bg-slate-800">
                Cancel
            </button>
        </div>
    </div>
</div>


    <script>
        const modal = document.getElementById('logoutModal');
        const logoutForm = document.getElementById('vendorLogoutForm');
        const dropdown = document.getElementById('userDropdown');
        const dropdownBtn = document.getElementById('userDropdownBtn');

        function toggleUserDropdown() {
            if (dropdown) {
                dropdown.classList.toggle('hidden');
            }
        }

        function openLogoutModal() {
            if (dropdown) {
                dropdown.classList.add('hidden');
            }

            if (modal) {
                modal.classList.remove('hidden');
                modal.classList.add('flex');
                document.body.style.overflow = 'hidden';
            }
        }

        function closeLogoutModal() {
            if (modal) {
                modal.classList.add('hidden');
                modal.classList.remove('flex');
                document.body.style.overflow = 'auto';
            }
        }

        function confirmLogout() {
            console.log("Logout confirmed, submitting form...");
            if (logoutForm) {
                logoutForm.submit();
            }
        }

        window.addEventListener('click', function(e) {
            if (dropdown && dropdownBtn && !dropdownBtn.contains(e.target) && !dropdown.contains(e.target)) {
                dropdown.classList.add('hidden');
            }

            if (modal && e.target === modal.querySelector('.absolute')) {
                closeLogoutModal();
            }
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>