@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Areas/Vendor/Views/Shared/_LayoutVendor.cshtml";
}

<div class="space-y-8 animate-in fade-in duration-500">

    <div class="relative overflow-hidden rounded-3xl border border-slate-200/70 bg-white/50 p-8 shadow-sm backdrop-blur-md dark:border-slate-800/70 dark:bg-slate-900/50">
        <div class="relative z-10 flex flex-col gap-5 md:flex-row md:items-center md:justify-between">
            <div>
                <h1 class="text-2xl font-black tracking-tight text-slate-900 dark:text-white lg:text-3xl">
                    System Risk <span class="text-emerald-600 dark:text-emerald-400">Intelligence</span>
                </h1>
                <p class="mt-2 max-w-2xl text-sm font-medium leading-relaxed text-slate-500 dark:text-slate-400">
                    Real-time oversight across <span class="font-bold text-slate-700 dark:text-slate-200">128 organizations</span>.
                    Monitor compliance trends and system-wide exposure from a single vantage point.
                </p>
            </div>
            <div class="flex items-center gap-3">
                <button class="flex items-center gap-2 rounded-xl bg-slate-900 px-5 py-2.5 text-xs font-bold text-white transition-all hover:bg-slate-800 dark:bg-white dark:text-slate-900">
                    <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" /></svg>
                    New Report
                </button>
            </div>
        </div>

        <div class="absolute -right-10 -top-10 h-40 w-40 rounded-full bg-emerald-500/10 blur-3xl"></div>
    </div>

    <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-4">
        @{
            var stats = new[] {
                new { Label = "Organizations", Value = "128", Sub = "Active Tenants", Icon = "M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16", Color = "text-emerald-600" },
                new { Label = "Active Risks", Value = "2,463", Sub = "Across Platform", Icon = "M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z", Color = "text-amber-500" },
                new { Label = "Open Incidents", Value = "57", Sub = "Awaiting Action", Icon = "M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z", Color = "text-rose-500" },
                new { Label = "Platform Health", Value = "99.9%", Sub = "System Uptime", Icon = "M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z", Color = "text-sky-500" }
                };
        }

        @foreach (var stat in stats)
        {
            <div class="group rounded-3xl border border-slate-200/70 bg-white p-6 transition-all hover:shadow-md dark:border-slate-800/70 dark:bg-slate-900/50">
                <div class="flex items-center justify-between">
                    <div class="rounded-2xl bg-slate-50 p-3 dark:bg-slate-800/50">
                        <svg class="h-6 w-6 @stat.Color" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="@stat.Icon" />
                        </svg>
                    </div>
                    <span class="text-[10px] font-black uppercase tracking-widest text-slate-400">@stat.Label</span>
                </div>
                <div class="mt-4">
                    <h3 class="text-3xl font-black text-slate-900 dark:text-white">@stat.Value</h3>
                    <p class="text-xs font-bold text-slate-500">@stat.Sub</p>
                </div>
            </div>
        }
    </div>

    <div class="grid gap-8 lg:grid-cols-12">

        <div class="lg:col-span-8 rounded-3xl border border-slate-200/70 bg-white p-8 dark:border-slate-800/70 dark:bg-slate-900/50">
            <div class="flex flex-wrap items-center justify-between gap-4">
                <div>
                    <h3 class="text-lg font-bold text-slate-900 dark:text-white">Risk Velocity</h3>
                    <p class="text-xs font-medium text-slate-500">Platform-wide risk identification trends</p>
                </div>
                <div class="flex rounded-xl bg-slate-100 p-1 dark:bg-slate-800">
                    <button class="rounded-lg px-4 py-1.5 text-xs font-bold text-slate-900 dark:text-white bg-white dark:bg-slate-700 shadow-sm">30 Days</button>
                    <button class="rounded-lg px-4 py-1.5 text-xs font-bold text-slate-500 hover:text-slate-700 dark:hover:text-slate-300">90 Days</button>
                </div>
            </div>

            <div class="mt-8 flex h-72 items-center justify-center rounded-2xl border-2 border-dashed border-slate-200 bg-slate-50/50 dark:border-slate-800 dark:bg-slate-950/20">
                <div class="text-center">
                    <div class="mx-auto h-12 w-12 rounded-full bg-emerald-100 p-2 dark:bg-emerald-900/20">
                        <svg class="text-emerald-600" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 12l3-3 3 3 4-4M8 21l4-4 4 4M3 4h18M4 4h16v12a1 1 0 01-1 1H5a1 1 0 01-1-1V4z" /></svg>
                    </div>
                    <p class="mt-3 text-sm font-bold text-slate-600 dark:text-slate-400">Chart.js Engine Ready</p>
                    <p class="text-[10px] text-slate-400">Waiting for data stream...</p>
                </div>
            </div>
        </div>

        <div class="lg:col-span-4 rounded-3xl border border-slate-200/70 bg-gradient-to-b from-white to-slate-50/50 p-8 dark:border-slate-800/70 dark:from-slate-900/50 dark:to-slate-900/80">
            <h3 class="text-lg font-bold text-slate-900 dark:text-white text-center">System Compliance</h3>

            <div class="relative mt-10 flex justify-center">
                <svg class="h-48 w-48 -rotate-90 transform">
                    <circle cx="96" cy="96" r="88" stroke="currentColor" stroke-width="12" fill="transparent" class="text-slate-200 dark:text-slate-800" />
                    <circle cx="96" cy="96" r="88" stroke="currentColor" stroke-width="12" fill="transparent" stroke-dasharray="552.92" stroke-dashoffset="38.7" class="text-emerald-500" stroke-linecap="round" />
                </svg>
                <div class="absolute inset-0 flex flex-col items-center justify-center">
                    <span class="text-4xl font-black text-slate-900 dark:text-white">93%</span>
                    <span class="text-[10px] font-bold uppercase tracking-widest text-emerald-600">Stable</span>
                </div>
            </div>

            <div class="mt-10 space-y-4">
                <div class="flex items-center justify-between text-sm">
                    <span class="font-bold text-slate-600 dark:text-slate-400">Target Goal</span>
                    <span class="font-black text-slate-900 dark:text-white">98.0%</span>
                </div>
                <div class="h-2 w-full rounded-full bg-slate-200 dark:bg-slate-800">
                    <div class="h-2 rounded-full bg-emerald-500" style="width: 93%"></div>
                </div>
                <p class="text-center text-[10px] font-medium text-slate-400">Last updated: 2 mins ago</p>
            </div>
        </div>
    </div>

    <div class="grid gap-8 lg:grid-cols-3">

        <div class="rounded-3xl border border-slate-200/70 bg-white p-6 dark:border-slate-800/70 dark:bg-slate-900/50">
            <h4 class="text-sm font-black uppercase tracking-widest text-slate-400">Risk Severity</h4>
            <div class="mt-6 space-y-5">
                @{
                    var severities = new[] {
                                new { Label = "Critical/High", Count = "214", Pct = "width: 15%", Color = "bg-rose-500" },
                                new { Label = "Medium Exposure", Count = "903", Pct = "width: 45%", Color = "bg-amber-500" },
                                new { Label = "Low/Acceptable", Count = "1,346", Pct = "width: 80%", Color = "bg-emerald-500" }
                                };
                }
                @foreach (var item in severities)
                {
                    <div>
                        <div class="flex justify-between text-xs font-bold mb-2">
                            <span class="text-slate-700 dark:text-slate-300">@item.Label</span>
                            <span class="text-slate-900 dark:text-white">@item.Count</span>
                        </div>
                        <div class="h-1.5 w-full rounded-full bg-slate-100 dark:bg-slate-800">
                            <div class="h-1.5 rounded-full @item.Color" style="@item.Pct"></div>
                        </div>
                    </div>
                }
            </div>
        </div>

        <div class="rounded-3xl border border-slate-200/70 bg-white p-6 dark:border-slate-800/70 dark:bg-slate-900/50">
            <div class="flex items-center justify-between mb-6">
                <h4 class="text-sm font-black uppercase tracking-widest text-slate-400">Live Feed</h4>
                <span class="flex h-2 w-2 rounded-full bg-emerald-500 animate-pulse"></span>
            </div>
            <div class="space-y-6">
                <div class="flex gap-4">
                    <div class="mt-1 h-2 w-2 shrink-0 rounded-full bg-rose-500 shadow-[0_0_8px_rgba(244,63,94,0.6)]"></div>
                    <div>
                        <p class="text-xs font-black text-slate-900 dark:text-white">Compliance Breach</p>
                        <p class="text-[10px] font-medium text-slate-500">Northwind Traders • 2m ago</p>
                    </div>
                </div>
                <div class="flex gap-4">
                    <div class="mt-1 h-2 w-2 shrink-0 rounded-full bg-emerald-500"></div>
                    <div>
                        <p class="text-xs font-black text-slate-900 dark:text-white">New Risk Assessment</p>
                        <p class="text-[10px] font-medium text-slate-500">Global Logistics • 14m ago</p>
                    </div>
                </div>
                <div class="flex gap-4">
                    <div class="mt-1 h-2 w-2 shrink-0 rounded-full bg-sky-500"></div>
                    <div>
                        <p class="text-xs font-black text-slate-900 dark:text-white">Report Generated</p>
                        <p class="text-[10px] font-medium text-slate-500">Super Admin • 1h ago</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="rounded-3xl border border-emerald-100 bg-emerald-50/50 p-6 dark:border-emerald-900/30 dark:bg-emerald-900/10">
            <h4 class="text-sm font-black uppercase tracking-widest text-emerald-800 dark:text-emerald-400">System Health</h4>
            <div class="mt-6 grid grid-cols-2 gap-4">
                <div class="rounded-2xl bg-white p-4 shadow-sm dark:bg-slate-900">
                    <p class="text-[10px] font-bold text-slate-400 uppercase">Latency</p>
                    <p class="text-lg font-black text-slate-900 dark:text-white">24ms</p>
                </div>
                <div class="rounded-2xl bg-white p-4 shadow-sm dark:bg-slate-900">
                    <p class="text-[10px] font-bold text-slate-400 uppercase">Jobs</p>
                    <p class="text-lg font-black text-emerald-600">Active</p>
                </div>
            </div>
            <button class="mt-6 w-full rounded-2xl bg-emerald-600 py-3 text-xs font-black text-white shadow-lg shadow-emerald-600/20 transition-all hover:scale-[1.02] active:scale-95">
                Run Diagnostic
            </button>
        </div>
    </div>
</div>