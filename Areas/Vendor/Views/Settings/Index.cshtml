@{
    ViewData["Title"] = "Global Settings";
    Layout = "~/Areas/Vendor/Views/Shared/_LayoutVendor.cshtml";
}

<div class="space-y-6 animate-in fade-in duration-500">
    <div class="flex flex-col gap-2 md:flex-row md:items-center md:justify-between">
        <div>
            <h1 class="text-2xl font-black tracking-tight text-slate-900 dark:text-white">Global <span class="text-emerald-600">Configurations</span></h1>
            <p class="text-[10px] font-black uppercase tracking-widest text-slate-400">Define System-Wide Logic & Risk Models</p>
        </div>
        <button class="rounded-xl bg-slate-900 px-6 py-2.5 text-xs font-black text-white dark:bg-emerald-600 transition-transform active:scale-95 shadow-lg shadow-emerald-500/20">
            Save Changes
        </button>
    </div>

    <div class="grid gap-8 lg:grid-cols-12">
        <div class="lg:col-span-3 space-y-2">
            <button class="w-full text-left px-4 py-3 rounded-xl bg-white border border-slate-200 dark:bg-slate-900 dark:border-slate-800 text-sm font-bold text-emerald-600 shadow-sm">
                Risk Scoring Models
            </button>
            <button class="w-full text-left px-4 py-3 rounded-xl hover:bg-white/50 text-sm font-bold text-slate-500 transition-colors">
                Default Workflows
            </button>
            <button class="w-full text-left px-4 py-3 rounded-xl hover:bg-white/50 text-sm font-bold text-slate-500 transition-colors">
                Notification Templates
            </button>
            <button class="w-full text-left px-4 py-3 rounded-xl hover:bg-white/50 text-sm font-bold text-slate-500 transition-colors">
                Security Policies
            </button>
        </div>

        <div class="lg:col-span-9 space-y-6">
            <div class="rounded-3xl border border-slate-200 bg-white p-8 dark:border-slate-800 dark:bg-slate-900/50">
                <h3 class="text-sm font-black uppercase tracking-widest text-slate-900 dark:text-white mb-6">Default Risk Scoring Model</h3>

                <div class="p-6 rounded-2xl bg-slate-50 dark:bg-slate-950 border border-slate-100 dark:border-slate-800 mb-8">
                    <p class="text-[10px] font-black uppercase text-slate-400 mb-2">Current Formula</p>
                    <div class="text-2xl font-mono font-bold text-slate-700 dark:text-emerald-400">
                        Risk Score = Likelihood × Impact
                    </div>
                </div>

                <div class="grid gap-6 md:grid-cols-2">
                    <div class="space-y-4">
                        <label class="block text-xs font-black uppercase tracking-widest text-slate-500">Likelihood Scale (1-5)</label>
                        <div class="space-y-2">
                            <input type="text" value="1 - Rare" class="w-full rounded-xl border-slate-200 bg-white p-3 text-xs font-bold dark:bg-slate-800 dark:border-slate-700 dark:text-white" />
                            <input type="text" value="3 - Possible" class="w-full rounded-xl border-slate-200 bg-white p-3 text-xs font-bold dark:bg-slate-800 dark:border-slate-700 dark:text-white" />
                            <input type="text" value="5 - Almost Certain" class="w-full rounded-xl border-slate-200 bg-white p-3 text-xs font-bold dark:bg-slate-800 dark:border-slate-700 dark:text-white" />
                        </div>
                    </div>
                    <div class="space-y-4">
                        <label class="block text-xs font-black uppercase tracking-widest text-slate-500">Impact Scale (1-5)</label>
                        <div class="space-y-2">
                            <input type="text" value="1 - Negligible" class="w-full rounded-xl border-slate-200 bg-white p-3 text-xs font-bold dark:bg-slate-800 dark:border-slate-700 dark:text-white" />
                            <input type="text" value="3 - Moderate" class="w-full rounded-xl border-slate-200 bg-white p-3 text-xs font-bold dark:bg-slate-800 dark:border-slate-700 dark:text-white" />
                            <input type="text" value="5 - Catastrophic" class="w-full rounded-xl border-slate-200 bg-white p-3 text-xs font-bold dark:bg-slate-800 dark:border-slate-700 dark:text-white" />
                        </div>
                    </div>
                </div>
            </div>

            <div class="rounded-3xl border border-slate-200 bg-white p-8 dark:border-slate-800 dark:bg-slate-900/50">
                <h3 class="text-sm font-black uppercase tracking-widest text-slate-900 dark:text-white mb-6">System Thresholds</h3>
                <div class="flex items-center justify-between p-4 rounded-2xl border border-slate-100 dark:border-slate-800">
                    <div>
                        <p class="text-xs font-bold text-slate-700 dark:text-white">Auto-Suspend Delinquent Tenants</p>
                        <p class="text-[10px] text-slate-400">Suspend access if invoice is 30 days overdue.</p>
                    </div>
                    <div class="h-6 w-11 rounded-full bg-emerald-500 relative cursor-pointer">
                        <div class="absolute right-1 top-1 h-4 w-4 rounded-full bg-white shadow-sm"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>