@{
    ViewData["Title"] = "Organization Admins";
    Layout = "~/Areas/Vendor/Views/Shared/_LayoutVendor.cshtml";
}

<div class="space-y-6 animate-in fade-in duration-500">
    <div class="flex flex-col gap-2 md:flex-row md:items-center md:justify-between">
        <div>
            <h1 class="text-2xl font-black tracking-tight text-slate-900 dark:text-white">Admin <span class="text-emerald-600">Accounts</span></h1>
            <p class="text-[10px] font-black uppercase tracking-widest text-slate-400">Manage Organization-Level Privileges</p>
        </div>
        <button onclick="toggleModal('addAdminModal')" class="rounded-xl bg-slate-900 px-5 py-3 text-xs font-black text-white dark:bg-emerald-600 shadow-lg shadow-emerald-500/20 hover:scale-105 transition-transform">
            Add Global Admin
        </button>
    </div>

    <div class="flex flex-wrap gap-3 rounded-2xl border border-slate-200 bg-white/50 p-3 backdrop-blur-md dark:border-slate-800 dark:bg-slate-900/50">
        <div class="relative flex-1 min-w-[300px]">
            <span class="absolute inset-y-0 left-4 flex items-center text-slate-400">
                <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" /></svg>
            </span>
            <input type="text" placeholder="Search by name, email, or firm..." class="w-full rounded-xl border-none bg-slate-100/50 py-2.5 pl-11 pr-4 text-sm font-bold dark:bg-slate-800/50 dark:text-white" />
        </div>
        <select class="rounded-xl border-none bg-slate-100/50 px-4 py-2.5 text-xs font-black uppercase text-slate-600 dark:bg-slate-800/50 dark:text-slate-300">
            <option>All Organizations</option>
            <option>BuildCraft Solutions</option>
            <option>Skyline Heights</option>
        </select>
    </div>

    <div class="rounded-3xl border border-slate-200 bg-white overflow-hidden dark:border-slate-800 dark:bg-slate-900/50 shadow-sm">
        <div class="overflow-x-auto">
            <table class="w-full text-left border-collapse">
                <thead>
                    <tr class="bg-slate-50/50 text-[10px] font-black uppercase tracking-widest text-slate-400 dark:bg-slate-800/30">
                        <th class="px-6 py-4">Administrator</th>
                        <th class="px-6 py-4">Organization</th>
                        <th class="px-6 py-4">Role</th>
                        <th class="px-6 py-4">Last Login</th>
                        <th class="px-6 py-4">Status</th>
                        <th class="px-6 py-4 text-right">Actions</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-slate-100 dark:divide-slate-800 text-sm">
                    @{
                        var admins = new[] {
                                        new { Name = "John Builder", Email = "j.builder@buildcraft.com", Org = "BuildCraft Solutions", Role = "Main Admin", Status = "Active", Last = "2 mins ago" },
                                        new { Name = "Sarah Skyline", Email = "sarah@skyline.io", Org = "Skyline Heights", Role = "Risk Manager", Status = "Active", Last = "1 hour ago" },
                                        new { Name = "Dave Terraform", Email = "dave@terra.net", Org = "Terraform Infra", Role = "Main Admin", Status = "Inactive", Last = "3 days ago" }
                                        };
                    }
                    @foreach (var admin in admins)
                    {
                        <tr class="group hover:bg-slate-50/50 dark:hover:bg-slate-800/20 transition-colors">
                            <td class="px-6 py-4">
                                <div class="flex items-center gap-3">
                                    <div class="h-8 w-8 rounded-full bg-emerald-100 text-emerald-600 flex items-center justify-center font-black text-xs dark:bg-emerald-900/30">@admin.Name.Substring(0, 1)</div>
                                    <div>
                                        <div class="font-bold text-slate-900 dark:text-white">@admin.Name</div>
                                        <div class="text-[10px] text-slate-400 font-medium">@admin.Email</div>
                                    </div>
                                </div>
                            </td>
                            <td class="px-6 py-4 font-bold text-slate-600 dark:text-slate-400">@admin.Org</td>
                            <td class="px-6 py-4">
                                <span class="px-2 py-1 rounded-md bg-slate-100 text-[10px] font-black uppercase text-slate-500 dark:bg-slate-800 dark:text-slate-400">@admin.Role</span>
                            </td>
                            <td class="px-6 py-4 text-xs font-medium text-slate-400">@admin.Last</td>
                            <td class="px-6 py-4">
                                <span class="h-2 w-2 rounded-full inline-block @(admin.Status == "Active" ? "bg-emerald-500" : "bg-slate-300") mr-2"></span>
                                <span class="text-xs font-bold @(admin.Status == "Active" ? "text-emerald-600" : "text-slate-400")">@admin.Status</span>
                            </td>
                            <td class="px-6 py-4 text-right">
                                <div class="flex justify-end gap-2 opacity-0 group-hover:opacity-100 transition-opacity">
                                    <button title="Reset Password" class="p-2 rounded-lg hover:bg-amber-50 text-slate-400 hover:text-amber-600 dark:hover:bg-amber-900/20"><svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 7a2 2 0 012 2m4 0a6 6 0 01-7.743 5.743L11 17H9v2H7v2H4a1 1 0 01-1-1v-2.586a1 1 0 01.293-.707l5.964-5.964A6 6 0 1121 9z" /></svg></button>
                                    <button title="Edit User" class="p-2 rounded-lg hover:bg-sky-50 text-slate-400 hover:text-sky-600 dark:hover:bg-sky-900/20"><svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" /></svg></button>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<div id="addAdminModal" class="fixed inset-0 z-50 hidden">
    <div class="absolute inset-0 bg-slate-900/40 backdrop-blur-sm" onclick="toggleModal('addAdminModal')"></div>
    <div class="absolute inset-0 flex items-center justify-center p-4">
        <div class="w-full max-w-md rounded-[2.5rem] bg-white p-10 shadow-2xl dark:bg-slate-900 border border-slate-200 dark:border-slate-800">
            <h2 class="text-xl font-black text-slate-900 dark:text-white mb-6">Add <span class="text-emerald-600">Org Admin</span></h2>
            <form class="space-y-4">
                <select class="w-full rounded-xl border-slate-200 bg-slate-50 p-3 text-sm font-bold dark:border-slate-800 dark:bg-slate-950 dark:text-white">
                    <option>Select Organization</option>
                    <option>BuildCraft Solutions</option>
                </select>
                <input type="text" placeholder="Full Name" class="w-full rounded-xl border-slate-200 bg-slate-50 p-3 text-sm font-bold dark:border-slate-800 dark:bg-slate-950 dark:text-white" />
                <input type="email" placeholder="Email Address" class="w-full rounded-xl border-slate-200 bg-slate-50 p-3 text-sm font-bold dark:border-slate-800 dark:bg-slate-950 dark:text-white" />
                <div class="flex gap-3 pt-4">
                    <button type="button" onclick="toggleModal('addAdminModal')" class="flex-1 py-3 text-xs font-black text-slate-400 uppercase">Cancel</button>
                    <button type="submit" class="flex-[2] rounded-xl bg-emerald-600 py-3 text-xs font-black text-white shadow-lg shadow-emerald-500/20">Create Admin</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function toggleModal(id) {
            const modal = document.getElementById(id);
            modal.classList.toggle('hidden');
        }
    </script>
}