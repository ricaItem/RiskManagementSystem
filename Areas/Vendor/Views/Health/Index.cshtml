@{
    ViewData["Title"] = "System Health & Uptime";
    Layout = "~/Areas/Vendor/Views/Shared/_LayoutVendor.cshtml";
}

<div class="space-y-6 animate-in fade-in duration-500">
    <div class="flex flex-col gap-2 md:flex-row md:items-center md:justify-between">
        <div>
            <h1 class="text-2xl font-black tracking-tight text-slate-900 dark:text-white">System <span class="text-emerald-600">Health</span></h1>
            <p class="text-xs font-bold uppercase tracking-widest text-slate-400">Real-time Infrastructure Monitoring</p>
        </div>
        <div class="flex items-center gap-3">
            <span class="flex items-center gap-2 rounded-full bg-emerald-500/10 px-3 py-1 text-[10px] font-black uppercase text-emerald-600 dark:bg-emerald-500/20">
                <span class="h-2 w-2 animate-pulse rounded-full bg-emerald-500"></span>
                All Systems Operational
            </span>
        </div>
    </div>

    <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-4">
        @{
            var metrics = new[] {
                new { Label = "Server Load", Value = "12%", Status = "Optimal", Color = "emerald" },
                new { Label = "DB Connections", Value = "482", Status = "Stable", Color = "sky" },
                new { Label = "Memory Usage", Value = "4.2GB", Status = "Normal", Color = "emerald" },
                new { Label = "API Latency", Value = "24ms", Status = "Excellent", Color = "emerald" }
                };
        }
        @foreach (var m in metrics)
        {
            <div class="rounded-3xl border border-slate-200 bg-white p-5 dark:border-slate-800 dark:bg-slate-900/50">
                <p class="text-[10px] font-black uppercase tracking-widest text-slate-400">@m.Label</p>
                <div class="mt-2 flex items-end justify-between">
                    <h3 class="text-2xl font-black text-slate-900 dark:text-white">@m.Value</h3>
                    <span class="text-[10px] font-bold text-@m.Color-600 uppercase">@m.Status</span>
                </div>
                <div class="mt-3 h-1 w-full rounded-full bg-slate-100 dark:bg-slate-800">
                    <div class="h-1 rounded-full bg-@m.Color-500" style="width: 30%"></div>
                </div>
            </div>
        }
    </div>

    <div class="grid gap-6 lg:grid-cols-12">
        <div class="lg:col-span-8 rounded-3xl border border-slate-200 bg-white overflow-hidden dark:border-slate-800 dark:bg-slate-900/50">
            <div class="border-b border-slate-100 p-6 dark:border-slate-800">
                <h3 class="text-sm font-black uppercase tracking-widest text-slate-900 dark:text-white">Background Job Queue</h3>
            </div>
            <div class="overflow-x-auto">
                <table class="w-full text-left">
                    <thead class="bg-slate-50/50 text-[10px] font-black uppercase tracking-widest text-slate-400 dark:bg-slate-800/30">
                        <tr>
                            <th class="px-6 py-4">Job Name</th>
                            <th class="px-6 py-4">Tenant Context</th>
                            <th class="px-6 py-4">Duration</th>
                            <th class="px-6 py-4">Status</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-slate-100 text-xs font-bold dark:divide-slate-800">
                        <tr class="dark:text-slate-300">
                            <td class="px-6 py-4">Daily Risk Aggregation</td>
                            <td class="px-6 py-4">System-Wide</td>
                            <td class="px-6 py-4 text-slate-400">1.2s</td>
                            <td class="px-6 py-4 text-emerald-500">Completed</td>
                        </tr>
                        <tr class="dark:text-slate-300">
                            <td class="px-6 py-4">Subscription Sync</td>
                            <td class="px-6 py-4">Stripe API</td>
                            <td class="px-6 py-4 text-slate-400">0.8s</td>
                            <td class="px-6 py-4 text-emerald-500">Completed</td>
                        </tr>
                        <tr class="dark:text-slate-300 italic animate-pulse">
                            <td class="px-6 py-4 text-sky-500">Backup & Recovery Init</td>
                            <td class="px-6 py-4">Azure Blob</td>
                            <td class="px-6 py-4 text-slate-400">In Progress</td>
                            <td class="px-6 py-4 text-sky-500">Processing...</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>

        <div class="lg:col-span-4 rounded-3xl border border-slate-200 bg-white p-6 dark:border-slate-800 dark:bg-slate-900/50">
            <h3 class="text-sm font-black uppercase tracking-widest text-slate-900 dark:text-white mb-6">Service Availability</h3>
            <div class="space-y-6">
                @{
                    var services = new[] {
                                new { Name = "Web Portal", Uptime = "99.99%" },
                                new { Name = "Reporting Engine", Uptime = "99.95%" },
                                new { Name = "Authentication (SSO)", Uptime = "100%" },
                                new { Name = "Risk API v2", Uptime = "99.98%" }
                                };
                }
                @foreach (var s in services)
                {
                    <div>
                        <div class="mb-2 flex justify-between text-[11px] font-black uppercase">
                            <span class="text-slate-500">@s.Name</span>
                            <span class="text-emerald-500">@s.Uptime</span>
                        </div>
                        <div class="flex gap-1">
                            @for (int i = 0; i < 20; i++)
                            {
                                <div class="h-4 flex-1 rounded-sm @(i == 18 ? "bg-amber-400" : "bg-emerald-500") opacity-80"></div>
                            }
                        </div>
                    </div>
                }
            </div>

            <button class="mt-8 w-full rounded-2xl bg-slate-900 py-3 text-[10px] font-black uppercase tracking-widest text-white transition-all hover:bg-slate-800 dark:bg-white dark:text-slate-900">
                Run Manual Diagnostics
            </button>
        </div>
    </div>
</div>