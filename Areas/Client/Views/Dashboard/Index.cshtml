@{
    ViewData["Title"] = "Firm Overview";
    Layout = "~/Areas/Client/Views/Shared/_LayoutClient.cshtml";
}

<div class="space-y-6 animate-in fade-in duration-500">
    <div class="flex items-center justify-between">
        <div>
            <h1 class="text-2xl font-black text-slate-900 dark:text-white">BuildCraft <span class="text-emerald-600">Command</span></h1>
            <p class="text-xs font-bold uppercase tracking-widest text-slate-400">Enterprise Risk Oversight • Professional Plan</p>
        </div>
        <div class="flex -space-x-2">
            @for (int i = 0; i < 4; i++)
            {
                <div class="h-10 w-10 rounded-full border-2 border-white bg-slate-200 dark:border-slate-900 dark:bg-slate-800"></div>
            }
            <div class="flex h-10 w-10 items-center justify-center rounded-full border-2 border-white bg-emerald-500 text-[10px] font-black text-white dark:border-slate-900">+12</div>
        </div>
    </div>

    <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-4">
        <div class="rounded-3xl border border-slate-200 bg-white p-6 dark:border-slate-800 dark:bg-slate-900/50 shadow-sm">
            <p class="text-[10px] font-black uppercase tracking-widest text-slate-400">Active Risks</p>
            <h3 class="mt-2 text-3xl font-black text-slate-900 dark:text-white">24</h3>
            <div class="mt-2 flex items-center gap-1 text-[10px] font-bold text-rose-500">
                <span>▲ 4 High Priority</span>
            </div>
        </div>
        <div class="rounded-3xl border border-slate-200 bg-white p-6 dark:border-slate-800 dark:bg-slate-900/50 shadow-sm">
            <p class="text-[10px] font-black uppercase tracking-widest text-slate-400">Incident Rate</p>
            <h3 class="mt-2 text-3xl font-black text-slate-900 dark:text-white">0.2%</h3>
            <div class="mt-2 flex items-center gap-1 text-[10px] font-bold text-emerald-500">
                <span>▼ 15% from last month</span>
            </div>
        </div>
        <div class="rounded-3xl border border-slate-200 bg-white p-6 dark:border-slate-800 dark:bg-slate-900/50 shadow-sm">
            <p class="text-[10px] font-black uppercase tracking-widest text-slate-400">Compliance Score</p>
            <h3 class="mt-2 text-3xl font-black text-slate-900 dark:text-white">94%</h3>
            <div class="mt-3 h-1.5 w-full rounded-full bg-slate-100 dark:bg-slate-800">
                <div class="h-full bg-emerald-500 rounded-full" style="width: 94%"></div>
            </div>
        </div>
        <div class="rounded-3xl border border-slate-200 bg-white p-6 dark:border-slate-800 dark:bg-slate-900/50 shadow-sm">
            <p class="text-[10px] font-black uppercase tracking-widest text-slate-400">Project Health</p>
            <h3 class="mt-2 text-3xl font-black text-slate-900 dark:text-white">Stable</h3>
            <div class="mt-2 flex gap-1">
                <span class="h-2 w-2 rounded-full bg-emerald-500"></span>
                <span class="h-2 w-2 rounded-full bg-emerald-500"></span>
                <span class="h-2 w-2 rounded-full bg-amber-500"></span>
            </div>
        </div>
    </div>

    <div class="grid gap-6 lg:grid-cols-12">
        <div class="lg:col-span-8 rounded-3xl border border-slate-200 bg-white p-8 dark:border-slate-800 dark:bg-slate-900/50">
            <div class="flex items-center justify-between mb-8">
                <h3 class="text-sm font-black uppercase tracking-widest text-slate-900 dark:text-white">Risk Matrix Analysis</h3>
                <button class="text-[10px] font-black uppercase text-emerald-600">View Full Matrix</button>
            </div>

            <div class="grid grid-cols-5 gap-2">
                @for (int i = 0; i < 25; i++)
                {
                    var color = i < 5 ? "bg-rose-500/20 text-rose-600" : i < 15 ? "bg-amber-500/20 text-amber-600" : "bg-emerald-500/20 text-emerald-600";
                    <div class="aspect-square rounded-lg @color flex items-center justify-center text-[10px] font-black">
                        @(new Random().Next(0, 5))
                    </div>
                }
            </div>
            <div class="mt-4 flex justify-between text-[10px] font-black uppercase tracking-tighter text-slate-400">
                <span>Low Impact</span>
                <span>High Impact</span>
            </div>
        </div>

        <div class="lg:col-span-4 rounded-3xl border border-slate-200 bg-white p-6 dark:border-slate-800 dark:bg-slate-900/50">
            <h3 class="text-sm font-black uppercase tracking-widest text-slate-900 dark:text-white mb-6">Live Activity</h3>
            <div class="space-y-6">
                <div class="flex gap-4">
                    <div class="mt-1 h-2 w-2 rounded-full bg-rose-500 shadow-[0_0_8px_rgba(244,63,94,0.6)]"></div>
                    <div>
                        <p class="text-xs font-bold text-slate-900 dark:text-white">New High Risk Identified</p>
                        <p class="text-[10px] text-slate-400 font-medium">Project: Sky Tower • 2m ago</p>
                    </div>
                </div>
                <div class="flex gap-4">
                    <div class="mt-1 h-2 w-2 rounded-full bg-emerald-500"></div>
                    <div>
                        <p class="text-xs font-bold text-slate-900 dark:text-white">Audit Completed</p>
                        <p class="text-[10px] text-slate-400 font-medium">By: Sarah Skyline • 1h ago</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>