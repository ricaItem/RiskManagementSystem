@model Web_Sentro.Areas.Client.Models.RiskMonitoringViewModel
@{
    Layout = "_LayoutClient";
}

<div class="max-w-full mx-auto space-y-6 animate-in fade-in duration-1000">
    <div class="flex flex-col md:flex-row md:items-center justify-between gap-4 bg-slate-900 p-8 rounded-3xl border border-slate-800 shadow-2xl relative overflow-hidden">
        <div class="absolute top-0 right-0 p-4">
            <span class="flex h-3 w-3">
                <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-emerald-400 opacity-75"></span>
                <span class="relative inline-flex rounded-full h-3 w-3 bg-emerald-500"></span>
            </span>
        </div>
        <div class="relative z-10">
            <h1 class="text-2xl font-black text-white tracking-tight">Monitoring <span class="text-emerald-500">Hub</span></h1>
            <p class="text-xs font-bold uppercase tracking-[0.2em] text-slate-500">Real-Time Site Intelligence & API Integration</p>
        </div>

        <div class="relative z-10 flex items-center gap-6 bg-slate-800/50 p-4 rounded-2xl border border-slate-700">
            <div class="text-right">
                <p class="text-[10px] font-black text-slate-500 uppercase">@Model.ProjectName</p>
                <p class="text-xl font-black text-white">@Model.Temperature°C</p>
            </div>
            <div class="h-10 w-px bg-slate-700"></div>
            <div>
                <p class="text-[10px] font-black text-rose-500 uppercase animate-pulse">@Model.WeatherCondition</p>
                <p class="text-xs font-bold text-slate-300">Wind: @Model.WindSpeed km/h</p>
            </div>
        </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">

        <div class="lg:col-span-2 bg-slate-200 dark:bg-slate-900 rounded-3xl overflow-hidden border border-slate-200 dark:border-slate-800 h-[500px] relative shadow-inner">
            <div class="absolute inset-0 opacity-40 grayscale group-hover:grayscale-0 transition-all duration-700">
                <img src="https://api.mapbox.com/styles/v1/mapbox/dark-v10/static/@Model.Longitude,@Model.Latitude,15,0/1200x800?access_token=YOUR_TOKEN" class="w-full h-full object-cover" alt="Map">
            </div>

            <div class="absolute top-4 left-4 flex flex-col gap-2">
                <div class="bg-white/90 dark:bg-slate-800/90 backdrop-blur px-4 py-2 rounded-xl border border-slate-200 dark:border-slate-700 shadow-xl">
                    <p class="text-[10px] font-black uppercase text-slate-500">Coordinates</p>
                    <p class="text-xs font-mono font-bold">@Model.Latitude, @Model.Longitude</p>
                </div>
            </div>

            <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2">
                <div class="relative flex items-center justify-center">
                    <div class="absolute h-20 w-20 rounded-full bg-rose-500/20 animate-ping"></div>
                    <div class="h-6 w-6 rounded-full bg-rose-600 border-4 border-white dark:border-slate-900 shadow-2xl relative z-10"></div>
                    <div class="absolute bottom-8 bg-slate-900 text-white text-[10px] font-black px-3 py-1 rounded-lg whitespace-nowrap shadow-xl border border-slate-700">
                        CRITICAL RISK: CRANE ZONE
                    </div>
                </div>
            </div>
        </div>

        <div class="space-y-6">
            <div class="bg-white dark:bg-slate-900 border border-slate-200 dark:border-slate-800 rounded-3xl p-6 shadow-sm">
                <h3 class="text-xs font-black uppercase tracking-widest text-slate-400 mb-4 flex items-center gap-2">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-4 h-4 text-rose-500">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M14.857 17.082a23.848 23.848 0 005.454-1.31A8.967 8.967 0 0118 9.75v-.7V9A6 6 0 006 9v.75a8.967 8.967 0 01-2.312 6.022c1.733.64 3.56 1.085 5.455 1.31m5.714 0a24.255 24.255 0 01-5.714 0m5.714 0a3 3 0 11-5.714 0" />
                    </svg>
                    System Alerts
                </h3>

                <div class="space-y-4">
                    <div class="p-4 rounded-2xl bg-rose-50 dark:bg-rose-500/10 border-l-4 border-rose-500">
                        <p class="text-xs font-black text-rose-600 dark:text-rose-400">Weather Shutdown Advised</p>
                        <p class="text-[10px] font-bold text-slate-500 mt-1">Wind speeds exceed 40km/h. Crane operations must be suspended immediately.</p>
                    </div>

                    <div class="p-4 rounded-2xl bg-amber-50 dark:bg-amber-500/10 border-l-4 border-amber-500">
                        <p class="text-xs font-black text-amber-600 dark:text-amber-400">Delayed Supplier Impact</p>
                        <p class="text-[10px] font-bold text-slate-500 mt-1">Traffic data suggests Steel Girder delivery is 4 hours behind schedule.</p>
                    </div>
                </div>
            </div>

            <button class="w-full bg-slate-900 hover:bg-black text-white rounded-2xl py-4 text-xs font-black uppercase tracking-widest shadow-xl transition-all flex items-center justify-center gap-3 group">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-5 h-5 text-emerald-500 transition-transform group-hover:rotate-180">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M16.023 9.348h4.992v-.001M2.985 19.644v-4.992m0 0h4.992m-4.993 0l3.181 3.183a8.25 8.25 0 0013.803-3.7M4.031 9.865a8.25 8.25 0 0113.803-3.7l3.181 3.182m0-4.991v4.99" />
                </svg>
                Sync All API Nodes
            </button>
        </div>
    </div>
    <div class="bg-white dark:bg-slate-900 border border-slate-200 dark:border-slate-800 rounded-3xl overflow-hidden shadow-sm mt-6">
        <div class="p-6 border-b border-slate-100 dark:border-slate-800 flex justify-between items-center">
            <div>
                <h2 class="text-sm font-black uppercase tracking-widest text-slate-900 dark:text-white">Active Risk Feed</h2>
                <p class="text-[10px] font-bold text-slate-400">Real-time status of identified threats</p>
            </div>
            <div class="flex gap-2">
                <span class="px-3 py-1 bg-rose-500/10 text-rose-600 text-[10px] font-black rounded-lg">3 CRITICAL</span>
                <span class="px-3 py-1 bg-amber-500/10 text-amber-600 text-[10px] font-black rounded-lg">5 PENDING</span>
            </div>
        </div>

        <div class="divide-y divide-slate-100 dark:divide-slate-800">
            @foreach (var risk in Model.HighPriorityRisks)
            {
                <div class="p-6 flex items-center justify-between group hover:bg-slate-50 dark:hover:bg-slate-800/50 transition-all">
                    <div class="flex items-center gap-4">
                        <div class="relative">
                            <div class="h-12 w-12 rounded-2xl bg-slate-100 dark:bg-slate-800 flex items-center justify-center text-xl">
                                @(risk.Category == "Operational" ? "🏗️" : "📉")
                            </div>
                            @if (risk.Priority == "Critical")
                            {
                                <span class="absolute -top-1 -right-1 flex h-3 w-3">
                                    <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-rose-400 opacity-75"></span>
                                    <span class="relative inline-flex rounded-full h-3 w-3 bg-rose-500"></span>
                                </span>
                            }
                        </div>

                        <div>
                            <div class="flex items-center gap-2">
                                <h4 class="text-sm font-black text-slate-900 dark:text-white">@risk.Title</h4>
                                <span class="text-[10px] px-2 py-0.5 rounded-md bg-slate-200 dark:bg-slate-700 text-slate-500 font-bold uppercase">@risk.Category</span>
                            </div>
                            <div class="flex items-center gap-3 mt-1 text-[11px] font-medium text-slate-500">
                                <span class="flex items-center gap-1">📍 @risk.ProjectSite</span>
                                <span class="h-1 w-1 rounded-full bg-slate-300"></span>
                                <span>Detected by: <span class="text-indigo-500 font-bold">@risk.DetectedBy</span></span>
                            </div>
                        </div>
                    </div>

                    <div class="flex items-center gap-8">
                        <div class="text-right hidden md:block">
                            <p class="text-[10px] font-black text-slate-400 uppercase">Last Update</p>
                            <p class="text-xs font-bold text-slate-700 dark:text-slate-300">2 mins ago</p>
                        </div>

                        <div class="flex gap-2">
                            <button class="p-2.5 rounded-xl border border-slate-200 dark:border-slate-700 hover:bg-white dark:hover:bg-slate-700 transition-all shadow-sm" title="View Logs">
                                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-4 h-4 text-slate-500">
                                    <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
                                </svg>
                            </button>
                            <button class="p-2.5 rounded-xl bg-slate-900 text-white hover:bg-indigo-600 transition-all shadow-lg" title="Quick Resolve">
                                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-4 h-4">
                                    <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 12.75l6 6 9-13.5" />
                                </svg>
                            </button>
                        </div>
                    </div>
                </div>
            }
        </div>

        <div class="p-4 bg-slate-50 dark:bg-slate-800/30 text-center">
            <button class="text-[10px] font-black uppercase tracking-[0.2em] text-slate-400 hover:text-indigo-500 transition-all">
                View Full Risk Archive ↓
            </button>
        </div>
    </div>
</div>