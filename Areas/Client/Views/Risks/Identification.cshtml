<script>
    let addMap, editMap, addMarker, editMarker;

    function initMap(mapId, lat = 7.0707, lng = 125.6087) {
        const map = L.map(mapId).setView([lat, lng], 13);
        L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png').addTo(map);
        const marker = L.marker([lat, lng]).addTo(map);
        return { map, marker };
    }

    function toggleNewRiskModal() {
        const modal = document.getElementById('newRiskModal');
        modal.classList.toggle('hidden');
        if (!modal.classList.contains('hidden') && !addMap) {
            setTimeout(() => { const res = initMap('addMap'); addMap = res.map; addMarker = res.marker; }, 200);
        }
    }

    function toggleEditModal() {
        const modal = document.getElementById('editRiskModal');
        modal.classList.toggle('hidden');
        if (!modal.classList.contains('hidden') && !editMap) {
            setTimeout(() => { const res = initMap('editMap'); editMap = res.map; editMarker = res.marker; }, 200);
        }
    }

    function openEditModal(title, category, priority, site, date) {
        document.getElementById('editTitle').value = title;
        document.getElementById('editPriority').value = priority;
        document.getElementById('editProjectSite').value = site;
        document.getElementById('editDate').value = date;
        toggleEditModal();
    }

    async function autoDetectLocation(inputId, mapKey) {
        const inputField = document.getElementById(inputId);
        const marker = mapKey === 'addMap' ? addMarker : editMarker;
        const map = mapKey === 'addMap' ? addMap : editMap;
        navigator.geolocation.getCurrentPosition(async (pos) => {
            const { latitude, longitude } = pos.coords;
            map.setView([latitude, longitude], 16);
            marker.setLatLng([latitude, longitude]);
            const res = await fetch(`https://nominatim.openstreetmap.org/reverse?format=json&lat=${latitude}&lon=${longitude}`);
            const data = await res.json();
            inputField.value = data.display_name || `${latitude}, ${longitude}`;
        });
    }
</script>