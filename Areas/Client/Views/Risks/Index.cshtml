@model IEnumerable<Web_Sentro.Areas.Client.Controllers.RiskViewModel>

@{
    ViewData["Title"] = "Risk Board";
    Layout = "~/Areas/Client/Views/Shared/_LayoutClient.cshtml";

    var criticalRisks = Model.Where(r => r.RiskScore >= 10).ToList();
    var watchListRisks = Model.Where(r => r.RiskScore < 10).ToList();
}

<div class="flex flex-col h-full bg-white dark:bg-slate-900 animate-in fade-in duration-500">

    <div class="flex items-center justify-between border-b border-slate-200 px-8 py-5 dark:border-slate-800">
        <div class="flex items-center gap-4">
            <h1 class="text-2xl font-black text-slate-800 dark:text-white">Risk <span class="text-indigo-600">Overview</span></h1>
            <div class="h-6 w-[1px] bg-slate-300 dark:bg-slate-700"></div>
            <button class="flex items-center gap-2 text-sm font-bold text-slate-500 hover:text-slate-800 transition">
                <i class="fas fa-star text-amber-400"></i> Main Board
            </button>
        </div>
        <div class="flex items-center gap-3">
            <div class="flex -space-x-2">
                <div class="h-8 w-8 rounded-full border-2 border-white bg-slate-200 flex items-center justify-center text-[10px] font-bold">JD</div>
                <div class="h-8 w-8 rounded-full border-2 border-white bg-indigo-100 flex items-center justify-center text-[10px] font-bold text-indigo-600">SM</div>
                <div class="h-8 w-8 rounded-full border-2 border-white bg-slate-800 flex items-center justify-center text-[10px] font-bold text-white">+4</div>
            </div>
            <div class="h-6 w-[1px] bg-slate-300 dark:bg-slate-700 mx-2"></div>
            <button class="rounded bg-indigo-600 px-4 py-2 text-xs font-bold text-white hover:bg-indigo-700 transition shadow-md shadow-indigo-500/20">
                <i class="fas fa-plus mr-2"></i> NEW ITEM
            </button>
        </div>
    </div>

    <div class="flex items-center gap-4 border-b border-slate-200 px-8 py-3 bg-slate-50/50 dark:border-slate-800 dark:bg-slate-900">
        <div class="flex items-center gap-2 rounded hover:bg-slate-200/50 px-2 py-1 cursor-pointer transition">
            <i class="fas fa-search text-slate-400 text-xs"></i>
            <span class="text-xs font-bold text-slate-500">Search</span>
        </div>
        <div class="flex items-center gap-2 rounded hover:bg-slate-200/50 px-2 py-1 cursor-pointer transition">
            <i class="fas fa-user-circle text-slate-400 text-xs"></i>
            <span class="text-xs font-bold text-slate-500">Person</span>
        </div>
        <div class="flex items-center gap-2 rounded hover:bg-slate-200/50 px-2 py-1 cursor-pointer transition">
            <i class="fas fa-filter text-slate-400 text-xs"></i>
            <span class="text-xs font-bold text-slate-500">Filter</span>
        </div>
        <div class="flex items-center gap-2 rounded hover:bg-slate-200/50 px-2 py-1 cursor-pointer transition">
            <i class="fas fa-sort text-slate-400 text-xs"></i>
            <span class="text-xs font-bold text-slate-500">Sort</span>
        </div>
    </div>

    <div class="flex-1 overflow-auto px-8 py-6">

        <div class="mb-8">
            <div class="flex items-center gap-2 mb-2 group cursor-pointer">
                <i class="fas fa-chevron-down text-rose-500 text-xs"></i>
                <h3 class="text-lg font-black text-rose-500">Critical Attention Needed</h3>
                <span class="rounded-full bg-rose-100 px-2 text-[10px] font-bold text-rose-600">@criticalRisks.Count</span>
            </div>

            <div class="rounded-lg border border-slate-200 shadow-sm overflow-hidden dark:border-slate-800">
                <table class="w-full border-collapse">
                    <thead>
                        <tr class="bg-slate-50 text-left text-[10px] font-bold uppercase tracking-wide text-slate-400 dark:bg-slate-800">
                            <th class="border-r border-slate-200 px-4 py-2 w-1/3 dark:border-slate-700">Risk Item</th>
                            <th class="border-r border-slate-200 px-4 py-2 w-32 text-center dark:border-slate-700">Owner</th>
                            <th class="border-r border-slate-200 px-4 py-2 w-40 text-center dark:border-slate-700">Status</th>
                            <th class="border-r border-slate-200 px-4 py-2 w-40 text-center dark:border-slate-700">Severity</th>
                            <th class="px-4 py-2 w-32 text-center">Timeline</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in criticalRisks)
                        {
                            <tr role="button" tabindex="0"
                                onclick="location.href='@Url.Action("Assess", "Risks", new { area = "Client", id = item.Id })'"
                                onkeydown="if(event.key === 'Enter'){ location.href='@Url.Action("Assess", "Risks", new { area = "Client", id = item.Id })'; }"
                                class="group hover:bg-slate-50 transition border-b border-slate-100 last:border-0 dark:border-slate-800 dark:hover:bg-slate-800/50 cursor-pointer">
                                <td class="border-r border-slate-200 bg-white p-0 group-hover:bg-slate-50 dark:bg-slate-900 dark:border-slate-700 dark:group-hover:bg-slate-800/50">
                                    <div class="flex h-full items-center border-l-[6px] border-rose-500 px-4 py-3">
                                        <span class="text-sm font-bold text-slate-800 dark:text-white">@item.Title</span>
                                    </div>
                                </td>

                                <td class="border-r border-slate-200 p-2 text-center dark:border-slate-700">
                                    <div class="flex justify-center">
                                        <div class="h-6 w-6 rounded-full bg-slate-200 text-[9px] font-black flex items-center justify-center text-slate-600" title="@item.Reporter">
                                            @item.Reporter.Substring(0, 2).ToUpper()
                                        </div>
                                    </div>
                                </td>

                                <td class="border-r border-white p-0 dark:border-slate-800">
                                    <div class="h-full w-full py-3 text-center text-[11px] font-black text-white uppercase tracking-wide cursor-pointer hover:opacity-90 transition
                                            @(item.Status == "Critical" ? "bg-rose-500" : "bg-amber-400")">
                                        @item.Status
                                    </div>
                                </td>

                                <td class="border-r border-white p-0 dark:border-slate-800">
                                    <div class="h-full w-full py-3 text-center text-[11px] font-black text-white cursor-pointer hover:opacity-90 transition bg-slate-800">
                                        HIGH (@item.RiskScore)
                                    </div>
                                </td>

                                <td class="p-2 text-center">
                                    <div class="mx-auto h-1.5 w-24 rounded-full bg-slate-200 dark:bg-slate-700 overflow-hidden">
                                        <div class="h-full bg-slate-400" style="width: 75%"></div>
                                    </div>
                                    <p class="mt-1 text-[9px] font-bold text-slate-400">Oct 24</p>
                                </td>
                            </tr>
                        }

                        <tr>
                            <td colspan="5" class="p-0">
                                <div class="flex items-center gap-2 px-4 py-2 border-l-[6px] border-rose-200 opacity-0 hover:opacity-100 transition cursor-pointer">
                                    <i class="fas fa-plus text-rose-500 text-xs"></i>
                                    <input type="text" placeholder="+ Add Item" class="bg-transparent text-sm font-medium focus:outline-none placeholder:text-slate-400" />
                                </div>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>

        <div class="mb-12">
            <div class="flex items-center gap-2 mb-2 group cursor-pointer">
                <i class="fas fa-chevron-down text-emerald-500 text-xs"></i>
                <h3 class="text-lg font-black text-emerald-500">Active Watch List</h3>
                <span class="rounded-full bg-emerald-100 px-2 text-[10px] font-bold text-emerald-600">@watchListRisks.Count</span>
            </div>

            <div class="rounded-lg border border-slate-200 shadow-sm overflow-hidden dark:border-slate-800">
                <table class="w-full border-collapse">
                    <thead>
                        <tr class="bg-slate-50 text-left text-[10px] font-bold uppercase tracking-wide text-slate-400 dark:bg-slate-800">
                            <th class="border-r border-slate-200 px-4 py-2 w-1/3 dark:border-slate-700">Risk Item</th>
                            <th class="border-r border-slate-200 px-4 py-2 w-32 text-center dark:border-slate-700">Owner</th>
                            <th class="border-r border-slate-200 px-4 py-2 w-40 text-center dark:border-slate-700">Status</th>
                            <th class="border-r border-slate-200 px-4 py-2 w-40 text-center dark:border-slate-700">Category</th>
                            <th class="px-4 py-2 w-32 text-center">Last Check</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in watchListRisks)
                        {
                            <tr class="group hover:bg-slate-50 transition border-b border-slate-100 last:border-0 dark:border-slate-800 dark:hover:bg-slate-800/50">
                                <td class="border-r border-slate-200 bg-white p-0 group-hover:bg-slate-50 dark:bg-slate-900 dark:border-slate-700 dark:group-hover:bg-slate-800/50">
                                    <div class="flex h-full items-center border-l-[6px] border-emerald-500 px-4 py-3">
                                        <span class="text-sm font-bold text-slate-800 dark:text-white">@item.Title</span>
                                    </div>
                                </td>

                                <td class="border-r border-slate-200 p-2 text-center dark:border-slate-700">
                                    <div class="flex justify-center">
                                        <div class="h-6 w-6 rounded-full bg-indigo-100 text-[9px] font-black flex items-center justify-center text-indigo-600">
                                            @item.Reporter.Substring(0, 1)
                                        </div>
                                    </div>
                                </td>

                                <td class="border-r border-white p-0 dark:border-slate-800">
                                    <div class="h-full w-full py-3 text-center text-[11px] font-black text-white uppercase tracking-wide cursor-pointer hover:opacity-90 transition bg-emerald-500">
                                        ON TRACK
                                    </div>
                                </td>

                                <td class="border-r border-white p-0 dark:border-slate-800">
                                    <div class="h-full w-full flex items-center justify-center">
                                        <span class="px-2 py-1 rounded text-[10px] font-bold text-slate-500 bg-slate-100 uppercase">
                                            @item.Category
                                        </span>
                                    </div>
                                </td>

                                <td class="p-2 text-center">
                                    <span class="text-[10px] font-bold text-slate-400">2 days ago</span>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

    </div>
</div>