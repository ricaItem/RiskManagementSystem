@model IEnumerable<Web_Sentro.Areas.Client.Controllers.MitigationTaskViewModel>

@{
    ViewData["Title"] = "Mitigation Board";
    Layout = "~/Areas/Client/Views/Shared/_LayoutClient.cshtml";

    var todo = Model.Where(t => t.Status == "ToDo").ToList();
    var progress = Model.Where(t => t.Status == "InProgress").ToList();
    var review = Model.Where(t => t.Status == "Review").ToList();
    var done = Model.Where(t => t.Status == "Done").ToList();
}

<div class="h-[calc(100vh-100px)] flex flex-col animate-in fade-in duration-500">

    <div class="flex items-center justify-between px-6 py-4 border-b border-slate-200 bg-white dark:border-slate-800 dark:bg-slate-900">
        <div>
            <h1 class="text-2xl font-black text-slate-900 dark:text-white">Mitigation <span class="text-indigo-600">Plan</span></h1>
            <p class="text-xs font-bold uppercase tracking-widest text-slate-400">Action Items & Task Tracking</p>
        </div>
        <div class="flex gap-3">
            <div class="flex items-center gap-2 bg-slate-100 rounded-lg p-1 dark:bg-slate-800">
                <button class="px-3 py-1 bg-white rounded shadow-sm text-xs font-bold text-slate-900 dark:bg-slate-700 dark:text-white">Board</button>
                <button class="px-3 py-1 text-xs font-bold text-slate-400 hover:text-slate-600">List</button>
                <button class="px-3 py-1 text-xs font-bold text-slate-400 hover:text-slate-600">Gantt</button>
            </div>
            <button class="flex items-center gap-2 rounded-lg bg-indigo-600 px-4 py-2 text-xs font-black text-white hover:bg-indigo-700 transition shadow-lg shadow-indigo-500/20">
                <i class="fas fa-plus"></i> ADD TASK
            </button>
        </div>
    </div>

    <div class="flex-1 overflow-x-auto overflow-y-hidden bg-slate-50 p-6 dark:bg-slate-950">
        <div class="flex h-full gap-6 min-w-[1200px]">

            <div class="flex w-80 flex-col rounded-xl bg-slate-100/50 dark:bg-slate-900/50">
                <div class="flex items-center justify-between p-4">
                    <div class="flex items-center gap-2">
                        <div class="h-2 w-2 rounded-full bg-slate-400"></div>
                        <h3 class="text-xs font-black uppercase text-slate-500">To Do</h3>
                        <span class="rounded bg-slate-200 px-1.5 py-0.5 text-[9px] font-bold text-slate-500 dark:bg-slate-800">@todo.Count</span>
                    </div>
                    <button class="text-slate-400 hover:text-slate-600"><i class="fas fa-plus"></i></button>
                </div>
                <div class="flex-1 space-y-3 overflow-y-auto p-3" ondrop="drop(event, 'ToDo')" ondragover="allowDrop(event)">
                    @foreach (var task in todo)
                    {
                        @await Html.PartialAsync("~/Areas/Client/Views/Mitigation/_TaskCard.cshtml", task)
                    }
                </div>
            </div>

            <div class="flex w-80 flex-col rounded-xl bg-indigo-50/50 dark:bg-indigo-900/10">
                <div class="flex items-center justify-between p-4">
                    <div class="flex items-center gap-2">
                        <div class="h-2 w-2 rounded-full bg-indigo-500 animate-pulse"></div>
                        <h3 class="text-xs font-black uppercase text-indigo-600">In Progress</h3>
                        <span class="rounded bg-indigo-100 px-1.5 py-0.5 text-[9px] font-bold text-indigo-600">@progress.Count</span>
                    </div>
                </div>
                <div class="flex-1 space-y-3 overflow-y-auto p-3" ondrop="drop(event, 'InProgress')" ondragover="allowDrop(event)">
                    @foreach (var task in progress)
                    {
                        @await Html.PartialAsync("~/Areas/Client/Views/Mitigation/_TaskCard.cshtml", task)
                    }
                </div>
            </div>

            <div class="flex w-80 flex-col rounded-xl bg-amber-50/50 dark:bg-amber-900/10">
                <div class="flex items-center justify-between p-4">
                    <div class="flex items-center gap-2">
                        <div class="h-2 w-2 rounded-full bg-amber-500"></div>
                        <h3 class="text-xs font-black uppercase text-amber-600">Review</h3>
                        <span class="rounded bg-amber-100 px-1.5 py-0.5 text-[9px] font-bold text-amber-600">@review.Count</span>
                    </div>
                </div>
                <div class="flex-1 space-y-3 overflow-y-auto p-3" ondrop="drop(event, 'Review')" ondragover="allowDrop(event)">
                    @foreach (var task in review)
                    {
                        @await Html.PartialAsync("~/Areas/Client/Views/Mitigation/_TaskCard.cshtml", task)
                    }
                </div>
            </div>

            <div class="flex w-80 flex-col rounded-xl bg-emerald-50/50 dark:bg-emerald-900/10">
                <div class="flex items-center justify-between p-4">
                    <div class="flex items-center gap-2">
                        <div class="h-2 w-2 rounded-full bg-emerald-500"></div>
                        <h3 class="text-xs font-black uppercase text-emerald-600">Done</h3>
                        <span class="rounded bg-emerald-100 px-1.5 py-0.5 text-[9px] font-bold text-emerald-600">@done.Count</span>
                    </div>
                </div>
                <div class="flex-1 space-y-3 overflow-y-auto p-3" ondrop="drop(event, 'Done')" ondragover="allowDrop(event)">
                    @foreach (var task in done)
                    {
                        @await Html.PartialAsync("~/Areas/Client/Views/Mitigation/_TaskCard.cshtml", task)
                    }
                </div>
            </div>

        </div>
    </div>
</div>

<script>
    function allowDrop(ev) { ev.preventDefault(); }

    function drag(ev) {
        ev.dataTransfer.setData("text", ev.target.id);
        ev.target.classList.add('opacity-50');
    }

    function drop(ev, status) {
        ev.preventDefault();
        var data = ev.dataTransfer.getData("text");
        var card = document.getElementById(data);
        card.classList.remove('opacity-50');

        var column = ev.target.closest('.overflow-y-auto');
        column.appendChild(card);

        // production: remove debug console output or keep if intentionally logging
    }
</script>