@model Web_Sentro.Areas.Client.Controllers.MitigationTaskViewModel

<div id="@Model.Id" draggable="true" ondragstart="drag(event)" class="group cursor-grab active:cursor-grabbing relative mb-3 rounded-lg border border-slate-200 bg-white p-4 shadow-sm transition hover:shadow-md hover:border-indigo-300 dark:border-slate-800 dark:bg-slate-900">

    <div class="mb-2 flex justify-between">
        <span class="text-[9px] font-bold text-slate-400">@Model.RiskId</span>
        <span class="rounded px-1.5 py-0.5 text-[8px] font-black uppercase tracking-wide
            @(Model.Priority == "Critical" ? "bg-rose-100 text-rose-600" :
                            Model.Priority == "High" ? "bg-amber-100 text-amber-600" : "bg-slate-100 text-slate-500")">
            @Model.Priority
        </span>
    </div>

    <h4 class="text-xs font-bold text-slate-800 leading-snug dark:text-white">@Model.Title</h4>

    <div class="mt-4 flex items-center justify-between border-t border-slate-50 pt-3 dark:border-slate-800">
        <div class="flex items-center gap-1 text-[10px] font-bold text-slate-400">
            <i class="far fa-clock"></i>
            <span class="@(Model.DueDate < DateTime.Now ? "text-rose-500" : "")">
                @Model.DueDate.ToString("MMM dd")
            </span>
        </div>

        <div class="h-6 w-6 rounded-full bg-indigo-100 text-[8px] font-black flex items-center justify-center text-indigo-700 border-2 border-white dark:border-slate-900">
            @(Model.Assignee != null ? Model.Assignee.Substring(0, 1) : "U")
        </div>
    </div>
</div>