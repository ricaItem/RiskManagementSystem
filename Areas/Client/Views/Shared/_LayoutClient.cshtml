<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Client Portal</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;700;900&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Inter', sans-serif;
        }
    </style>
</head>
<body class="bg-slate-50 dark:bg-[#020617] transition-colors duration-300">
    <div class="flex h-screen overflow-hidden">
        <aside class="w-64 border-r border-slate-200 bg-white dark:border-slate-800 dark:bg-slate-900 shadow-xl z-20">
            <div class="flex h-20 items-center px-6 border-b border-slate-100 dark:border-slate-800">
                <span class="text-xl font-black tracking-tighter text-slate-900 dark:text-white">
                    SENTRO <span class="text-emerald-600">CLIENT</span>
                </span>
            </div>

            <nav class="mt-6 space-y-1 px-3">
                <div class="pb-2 text-[10px] font-black uppercase tracking-widest text-slate-400 px-4">Operations</div>

                <a href="/Client/Dashboard" class="flex items-center gap-3 rounded-xl px-4 py-2.5 text-sm font-bold text-slate-600 hover:bg-slate-100 dark:text-slate-400 dark:hover:bg-slate-800">
                    <span>🏠</span> Dashboard
                </a>
                <a href="/Client/Risks" class="flex items-center gap-3 rounded-xl px-4 py-2.5 text-sm font-bold text-slate-600 hover:bg-slate-100 dark:text-slate-400 dark:hover:bg-slate-800">
                    <span>⚠️</span> Risk Inventory
                </a>
                <a href="/Client/Incidents" class="flex items-center gap-3 rounded-xl px-4 py-2.5 text-sm font-bold text-slate-600 hover:bg-slate-100 dark:text-slate-400 dark:hover:bg-slate-800">
                    <span>🚨</span> Incidents
                </a>

                <div class="pt-6 pb-2 text-[10px] font-black uppercase tracking-widest text-slate-400 px-4">Governance</div>
                <a href="/Client/Audits" class="flex items-center gap-3 rounded-xl px-4 py-2.5 text-sm font-bold text-slate-600 hover:bg-slate-100 dark:text-slate-400 dark:hover:bg-slate-800">
                    <span>📋</span> Safety Audits
                </a>
                <a href="/Client/Employees" class="flex items-center gap-3 rounded-xl px-4 py-2.5 text-sm font-bold text-slate-600 hover:bg-slate-100 dark:text-slate-400 dark:hover:bg-slate-800">
                    <span>👷</span> Workforce
                </a>
            </nav>
        </aside>

        <main class="flex-1 overflow-y-auto p-8 relative">
            @RenderBody()
        </main>
    </div>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>